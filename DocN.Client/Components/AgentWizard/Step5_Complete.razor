@using DocN.Data.Models

<div class="step-content">
    <div class="step-header completion-header">
        <div class="success-icon">üéâ</div>
        <h2>Complimenti! Il Tuo Agente √® Pronto!</h2>
        <p class="step-description">
            Hai configurato con successo il tuo assistente AI personalizzato.
            <br>Ora puoi salvarlo e iniziare a usarlo!
        </p>
    </div>

    <div class="completion-summary">
        <div class="summary-card">
            <h3>üìä Riepilogo Finale</h3>
            
            <div class="summary-section">
                <h4>Informazioni Base</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <strong>Nome:</strong>
                        <span>@Agent.Name</span>
                    </div>
                    <div class="info-item">
                        <strong>Tipo:</strong>
                        <span>@Agent.AgentType</span>
                    </div>
                    <div class="info-item">
                        <strong>Descrizione:</strong>
                        <span>@(string.IsNullOrWhiteSpace(Agent.Description) ? "Non specificata" : Agent.Description)</span>
                    </div>
                </div>
            </div>

            <div class="summary-section">
                <h4>‚öôÔ∏è Configurazione Tecnica</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <strong>Provider AI:</strong>
                        <span>@Agent.PrimaryProvider</span>
                    </div>
                    <div class="info-item">
                        <strong>Modello:</strong>
                        <span>@(Agent.ModelName ?? "Default")</span>
                    </div>
                    <div class="info-item">
                        <strong>Documenti recuperati:</strong>
                        <span>@Agent.MaxDocumentsToRetrieve</span>
                    </div>
                    <div class="info-item">
                        <strong>Temperatura:</strong>
                        <span>@Agent.Temperature</span>
                    </div>
                    <div class="info-item">
                        <strong>Ricerca ibrida:</strong>
                        <span>@(Agent.UseHybridSearch ? "Attiva" : "Disattivata")</span>
                    </div>
                    <div class="info-item">
                        <strong>Citazioni:</strong>
                        <span>@(Agent.EnableCitation ? "Abilitate" : "Disabilitate")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="next-steps-card">
            <h3>üöÄ Prossimi Passi</h3>
            <ol class="steps-list">
                <li>
                    <strong>Salva l'agente</strong>
                    <p>Clicca su "Salva e Vai agli Agenti" per salvare la configurazione</p>
                </li>
                <li>
                    <strong>Carica documenti</strong>
                    <p>Assicurati di avere documenti caricati nel sistema per far funzionare l'agente</p>
                </li>
                <li>
                    <strong>Inizia a usarlo!</strong>
                    <p>Vai alla sezione Agenti e inizia a fare domande</p>
                </li>
                <li>
                    <strong>Monitora e ottimizza</strong>
                    <p>Controlla le statistiche di utilizzo e modifica i parametri se necessario</p>
                </li>
            </ol>
        </div>

        <div class="tips-card">
            <h3>üí° Suggerimenti Utili</h3>
            <ul class="tips-list">
                <li>Puoi sempre modificare la configurazione dell'agente dopo averlo salvato</li>
                <li>Monitora le prestazioni dell'agente dalla dashboard per capire se funziona bene</li>
                <li>Se le risposte non sono soddisfacenti, prova ad aumentare il numero di documenti recuperati</li>
                <li>Per risposte pi√π precise, aumenta la soglia di similarit√†</li>
                <li>Per risposte pi√π creative, aumenta la temperatura</li>
            </ul>
        </div>
    </div>

    <div class="step-actions">
        <button class="btn btn-secondary" @onclick="OnBack">
            ‚Üê Indietro
        </button>
        <button class="btn btn-primary btn-large" @onclick="OnSave">
            üíæ Salva e Vai agli Agenti
        </button>
    </div>
</div>

@code {
    [Parameter]
    public AgentConfiguration Agent { get; set; } = new();

    [Parameter]
    public EventCallback OnBack { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }
}

<style>
    .completion-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .success-icon {
        font-size: 5rem;
        margin-bottom: 1rem;
        animation: celebrate 0.6s ease-in-out;
    }

    @@keyframes celebrate {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    .completion-summary {
        display: grid;
        gap: 2rem;
    }

    .summary-card, .next-steps-card, .tips-card {
        background: white;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        padding: 2rem;
    }

    .summary-card h3, .next-steps-card h3, .tips-card h3 {
        margin-bottom: 1.5rem;
        color: #2c3e50;
    }

    .summary-section {
        margin-bottom: 2rem;
    }

    .summary-section:last-child {
        margin-bottom: 0;
    }

    .summary-section h4 {
        margin-bottom: 1rem;
        color: #667eea;
        font-size: 1.1rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .info-item {
        padding: 0.75rem;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-item strong {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    .info-item span {
        color: #2c3e50;
        font-weight: 600;
    }

    .steps-list {
        counter-reset: step-counter;
        list-style: none;
        padding-left: 0;
    }

    .steps-list li {
        counter-increment: step-counter;
        margin-bottom: 1.5rem;
        padding-left: 3rem;
        position: relative;
    }

    .steps-list li::before {
        content: counter(step-counter);
        position: absolute;
        left: 0;
        top: 0;
        width: 2rem;
        height: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .steps-list li strong {
        display: block;
        margin-bottom: 0.25rem;
        color: #2c3e50;
    }

    .steps-list li p {
        color: #7f8c8d;
        margin: 0;
    }

    .tips-list {
        list-style: none;
        padding-left: 0;
    }

    .tips-list li {
        padding-left: 2rem;
        margin-bottom: 0.75rem;
        position: relative;
        color: #555;
    }

    .tips-list li::before {
        content: "üí°";
        position: absolute;
        left: 0;
    }

    .btn-large {
        font-size: 1.2rem;
        padding: 1rem 2.5rem;
    }
</style>
