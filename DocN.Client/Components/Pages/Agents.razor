@page "/agents"
@using DocN.Data.Models
@using System.Net.Http.Json
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>I Miei Agenti AI - DocN</PageTitle>

<div class="agents-container">
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            <span class="alert-icon">‚ö†Ô∏è</span>
            <span>@errorMessage</span>
            <button class="alert-close" @onclick="() => errorMessage = null">√ó</button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            <span class="alert-icon">‚úÖ</span>
            <span>@successMessage</span>
            <button class="alert-close" @onclick="() => successMessage = null">√ó</button>
        </div>
    }
    
    @if (agentToDelete.HasValue)
    {
        <div class="modal-overlay">
            <div class="modal-dialog">
                <h3>‚ö†Ô∏è Conferma Eliminazione</h3>
                <p>Sei sicuro di voler eliminare questo agente?</p>
                <div class="modal-actions">
                    <button class="btn btn-secondary" @onclick="CancelDelete">Annulla</button>
                    <button class="btn btn-danger" @onclick="ConfirmDeleteAgent">Elimina</button>
                </div>
            </div>
        </div>
    }
    
    <div class="page-header">
        <div>
            <h1>ü§ñ I Miei Assistenti AI</h1>
            <p class="subtitle">Gestisci e utilizza i tuoi agenti RAG personalizzati</p>
        </div>
        <button class="btn btn-primary btn-create" @onclick="CreateNewAgent">
            ‚ûï Crea Nuovo Agente
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Caricamento agenti...</p>
        </div>
    }
    else if (!myAgents.Any() && !publicAgents.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">üéØ</div>
            <h2>Non hai ancora creato nessun agente</h2>
            <p>Gli agenti AI ti aiutano a interagire con i tuoi documenti in modo intelligente.</p>
            <button class="btn btn-primary btn-large" @onclick="CreateNewAgent">
                üßô‚Äç‚ôÇÔ∏è Crea il Tuo Primo Agente
            </button>
        </div>
    }
    else
    {
        @if (myAgents.Any())
        {
            <div class="agents-section">
                <h2>üë§ I Miei Agenti</h2>
                <div class="agents-grid">
                    @foreach (var agent in myAgents)
                    {
                        <div class="agent-card">
                            <div class="agent-header">
                                <h3>@agent.Name</h3>
                                <span class="agent-type-badge">@agent.AgentType</span>
                            </div>
                            <p class="agent-description">@agent.Description</p>
                            
                            <div class="agent-stats">
                                <div class="stat">
                                    <span class="stat-label">Provider</span>
                                    <span class="stat-value">@agent.PrimaryProvider</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Utilizzi</span>
                                    <span class="stat-value">@agent.UsageCount</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Ultimo uso</span>
                                    <span class="stat-value">@(agent.LastUsedAt?.ToString("dd/MM/yyyy") ?? "Mai")</span>
                                </div>
                            </div>

                            <div class="agent-actions">
                                <button class="btn btn-small btn-use" @onclick="() => UseAgent(agent.Id)">
                                    üí¨ Usa
                                </button>
                                <button class="btn btn-small btn-edit" @onclick="() => EditAgent(agent.Id)">
                                    ‚úèÔ∏è Modifica
                                </button>
                                <button class="btn btn-small btn-delete" @onclick="() => RequestDeleteAgent(agent.Id)">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (publicAgents.Any())
        {
            <div class="agents-section">
                <h2>üåê Agenti Pubblici</h2>
                <div class="agents-grid">
                    @foreach (var agent in publicAgents)
                    {
                        <div class="agent-card public">
                            <div class="agent-header">
                                <h3>@agent.Name</h3>
                                <span class="agent-type-badge public">Pubblico</span>
                            </div>
                            <p class="agent-description">@agent.Description</p>
                            
                            <div class="agent-stats">
                                <div class="stat">
                                    <span class="stat-label">Provider</span>
                                    <span class="stat-value">@agent.PrimaryProvider</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Utilizzi</span>
                                    <span class="stat-value">@agent.UsageCount</span>
                                </div>
                            </div>

                            <div class="agent-actions">
                                <button class="btn btn-small btn-use" @onclick="() => UseAgent(agent.Id)">
                                    üí¨ Usa Agente
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private bool isLoading = true;
    private List<AgentConfiguration> myAgents = new();
    private List<AgentConfiguration> publicAgents = new();
    private string? errorMessage;
    private string? successMessage;
    private int? agentToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadAgents();
        isLoading = false;
    }

    private async Task LoadAgents()
    {
        try
        {
            var client = HttpClientFactory.CreateClient("DocN.ServerAPI");
            
            myAgents = await client.GetFromJsonAsync<List<AgentConfiguration>>("api/agent/my-agents") ?? new();
            publicAgents = await client.GetFromJsonAsync<List<AgentConfiguration>>("api/agent/public") ?? new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore caricamento agenti: {ex.Message}";
        }
    }

    private void CreateNewAgent()
    {
        Navigation.NavigateTo("/agent-wizard");
    }

    private void UseAgent(int agentId)
    {
        Navigation.NavigateTo($"/chat?agentId={agentId}");
    }

    private void EditAgent(int agentId)
    {
        Navigation.NavigateTo($"/agent-wizard/{agentId}");
    }

    private void RequestDeleteAgent(int agentId)
    {
        agentToDelete = agentId;
    }

    private void CancelDelete()
    {
        agentToDelete = null;
    }

    private async Task ConfirmDeleteAgent()
    {
        if (!agentToDelete.HasValue) return;

        try
        {
            var client = HttpClientFactory.CreateClient("DocN.ServerAPI");
            var response = await client.DeleteAsync($"api/agent/{agentToDelete.Value}");
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "‚úÖ Agente eliminato con successo";
                await LoadAgents();
            }
            else
            {
                errorMessage = "‚ùå Errore nell'eliminazione dell'agente";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore: {ex.Message}";
        }
        finally
        {
            agentToDelete = null;
        }
    }
}

