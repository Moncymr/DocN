@page "/"
@using DocN.Data
@using DocN.Data.Services
@using DocN.Data.Constants
@using Microsoft.EntityFrameworkCore
@inject DocArcContext DbContext
@inject DocN.Data.Services.IEmbeddingService EmbeddingService
@inject DocN.Data.Services.IChunkingService ChunkingService
@inject ILogger<Home> Logger
@inject NavigationManager Navigation

