<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            <span class="gradient-text">DocN</span>
        </h1>
        <p class="hero-subtitle">Gestione Intelligente dei Documenti con Ricerca Semantica</p>
        <p class="hero-description">
            Organizza, analizza e trova i tuoi documenti con l'aiuto dell'intelligenza artificiale. 
            Supporto per Gemini, OpenAI e Azure OpenAI.
        </p>
        <div class="cta-buttons">
            <a href="/documents" class="btn btn-primary btn-large">
                <span>📁 I Miei Documenti</span>
            </a>
            <a href="/upload" class="btn btn-secondary btn-large">
                <span>📤 Carica Documento</span>
            </a>
            <button @onclick="RecreateAllEmbeddings" class="btn btn-accent btn-large" disabled="@isRecreatingEmbeddings">
                @if (isRecreatingEmbeddings)
                {
                    <span>⏳ Rigenerazione in corso...</span>
                }
                else
                {
                    <span>🔄 Rigenera Tutti gli Embeddings</span>
                }
            </button>
        </div>
        
        @if (isRecreatingEmbeddings && totalDocuments > 0)
        {
            <div class="progress-container">
                <div class="progress-text">
                    🔄 Rigenerando documento @currentDocument di @totalDocuments
                </div>
                @if (!string.IsNullOrEmpty(currentDocumentName))
                {
                    <div class="progress-document-name">
                        📄 @currentDocumentName
                    </div>
                }
                <div class="progress-bar-container">
                    <div class="progress-bar" style="width: @progressPercentage%"></div>
                </div>
                <div class="progress-stats">
                    ✅ Successi: @processedSuccessCount | ❌ Errori: @processedErrorCount
                </div>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(embeddingMessage))
        {
            <div class="@($"alert-message {(embeddingSuccess ? "alert-success" : "alert-error")}")">
                @embeddingMessage
            </div>
        }
    </div>
    
    <div class="features-grid">
        <a href="/upload" class="feature-card clickable">
            <div class="feature-icon">📤</div>
            <h3>Upload & Organizza</h3>
            <p>Carica documenti e ricevi suggerimenti di categoria automatici con spiegazione del ragionamento</p>
            <div class="feature-highlight">Intelligente</div>
        </a>
        
        <a href="/search" class="feature-card clickable">
            <div class="feature-icon">🔍</div>
            <h3>Ricerca Semantica</h3>
            <p>Trova documenti usando linguaggio naturale grazie agli embeddings vettoriali</p>
            <div class="feature-highlight">Smart Search</div>
        </a>
        
        <a href="/chat" class="feature-card clickable">
            <div class="feature-icon">💬</div>
            <h3>Chat AI</h3>
            <p>Interagisci con i tuoi documenti usando l'intelligenza artificiale conversazionale</p>
            <div class="feature-highlight">AI Powered</div>
        </a>
        
        <a href="/dashboard" class="feature-card clickable">
            <div class="feature-icon">📊</div>
            <h3>Analytics</h3>
            <p>Monitora l'utilizzo, visualizza statistiche e ricevi suggerimenti di ottimizzazione</p>
            <div class="feature-highlight">Insights</div>
        </a>
        
        <a href="/config" class="feature-card clickable">
            <div class="feature-icon">🤖</div>
            <h3>Multi-Provider</h3>
            <p>Supporto per Gemini, OpenAI e Azure OpenAI con fallback automatico</p>
            <div class="feature-highlight">Flessibile</div>
        </a>
        
        <a href="/login" class="feature-card clickable">
            <div class="feature-icon">🔒</div>
            <h3>Sicurezza</h3>
            <p>Gestione identità ASP.NET Core con controlli di accesso basati su ruoli</p>
            <div class="feature-highlight">Enterprise</div>
        </a>
    </div>
</div>

@code {
    private bool isRecreatingEmbeddings = false;
    private string embeddingMessage = "";
    private bool embeddingSuccess = false;
    private int totalDocuments = 0;
    private int currentDocument = 0;
    private int processedSuccessCount = 0;
    private int processedErrorCount = 0;
    private string currentDocumentName = "";
    private double progressPercentage => totalDocuments > 0 ? (double)currentDocument / totalDocuments * 100 : 0;

    private async Task RecreateAllEmbeddings()
    {
        isRecreatingEmbeddings = true;
        embeddingMessage = "";
        embeddingSuccess = false;
        totalDocuments = 0;
        currentDocument = 0;
        currentDocumentName = "";
        processedSuccessCount = 0;
        processedErrorCount = 0;
        StateHasChanged();

        try
        {
            Logger.LogInformation("Starting recreation of all embeddings");

            // Get all documents
            var documents = await DbContext.Documents
                .Where(d => !string.IsNullOrEmpty(d.ExtractedText))
                .ToListAsync();

            totalDocuments = documents.Count;
            Logger.LogInformation("Found {Count} documents to process", totalDocuments);
            StateHasChanged(); // Update UI with total count

            int successCount = 0;
            int errorCount = 0;

            foreach (var document in documents)
            {
                currentDocument++;
                currentDocumentName = document.FileName ?? $"Documento #{document.Id}";
                
                try
                {
                    // Regenerate embedding for document
                    var embedding = await EmbeddingService.GenerateEmbeddingAsync(document.ExtractedText);
                    if (embedding != null)
                    {
                        document.EmbeddingVector = embedding;
                        document.EmbeddingDimension = embedding.Length; // Fix: Set embedding dimension
                        successCount++;
                        processedSuccessCount++;
                    }

                    // Delete existing chunks and recreate them
                    var existingChunks = await DbContext.DocumentChunks
                        .Where(c => c.DocumentId == document.Id)
                        .ToListAsync();
                    
                    DbContext.DocumentChunks.RemoveRange(existingChunks);

                    // Create new chunks with embeddings
                    var newChunks = ChunkingService.ChunkDocument(document);
                    int chunksEmbedded = 0;
                    foreach (var chunk in newChunks)
                    {
                        var chunkEmbedding = await EmbeddingService.GenerateEmbeddingAsync(chunk.ChunkText);
                        if (chunkEmbedding != null)
                        {
                            chunk.ChunkEmbedding = chunkEmbedding;
                            // ChunkEmbedding setter automatically sets EmbeddingDimension
                            chunksEmbedded++;
                        }
                        DbContext.DocumentChunks.Add(chunk);
                    }

                    // Update chunk embedding status
                    if (newChunks.Count == 0)
                    {
                        document.ChunkEmbeddingStatus = ChunkEmbeddingStatus.NotRequired;
                    }
                    else if (chunksEmbedded == newChunks.Count)
                    {
                        document.ChunkEmbeddingStatus = ChunkEmbeddingStatus.Completed;
                    }
                    else if (chunksEmbedded > 0)
                    {
                        // Some chunks have embeddings but not all - mark as pending for retry
                        document.ChunkEmbeddingStatus = ChunkEmbeddingStatus.Pending;
                    }
                    else
                    {
                        // No chunks have embeddings
                        document.ChunkEmbeddingStatus = ChunkEmbeddingStatus.Pending;
                    }

                    await DbContext.SaveChangesAsync();
                    Logger.LogInformation("Recreated embeddings for document {Id}: {FileName} - {ChunksEmbedded}/{TotalChunks} chunks embedded", 
                        document.Id, document.FileName, chunksEmbedded, newChunks.Count);
                }
                catch (Exception ex)
                {
                    errorCount++;
                    processedErrorCount++;
                    Logger.LogError(ex, "Error recreating embeddings for document {Id}: {FileName}", 
                        document.Id, document.FileName);
                }
                
                // Update UI once per document (after all processing is complete)
                StateHasChanged();
            }

            embeddingMessage = $"✅ Embeddings e chunks ricreati per {successCount} documenti. Errori: {errorCount}";
            embeddingSuccess = true;
            Logger.LogInformation("Completed recreation of embeddings: {SuccessCount} successful, {ErrorCount} errors", 
                successCount, errorCount);
        }
        catch (Exception ex)
        {
            embeddingMessage = $"❌ Errore: {ex.Message}";
            embeddingSuccess = false;
            Logger.LogError(ex, "Error recreating all embeddings");
        }
        finally
        {
            isRecreatingEmbeddings = false;
            StateHasChanged();
        }
    }
}

