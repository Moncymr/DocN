@*
    UploadMultiple.razor - Componente Blazor per caricamento multiplo documenti
    
    Scopo:
    Interfaccia utente per caricamento simultaneo di pi√π documenti con:
    - Selezione multipla file (click o drag-drop)
    - Categoria condivisa per tutti i documenti
    - Validazione formato e dimensione
    - Analisi automatica contenuto (estrazione testo, OCR)
    - Generazione embeddings per ricerca semantica
    - Estrazione metadati AI (categoria, tag)
    - Elaborazione asincrona non bloccante
    - Gestione errori e feedback per ogni file
    
    Flusso operativo:
    1. Utente seleziona categoria
    2. Utente seleziona multipli file
    3. Utente imposta opzioni di elaborazione
    4. Click "Carica Documenti" ‚Üí Salvataggio asincrono di tutti i file
    5. Visualizzazione progresso per ogni file
    6. Redirect a pagina Documents al completamento
*@
@page "/upload-multiple"
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@using System.Net.Http
@using DocN.Core.Interfaces
@using DocN.Data.Services
@using DocN.Data.Utilities
@using DocN.Data.Models
@inject IDocumentService DocumentService
@inject IMultiProviderAIService AIService
@inject IFileProcessingService FileProcessingService
@inject ISemanticRAGService SemanticRAGService
@inject ILogService LogService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Caricamento Multiplo - DocN</PageTitle>

<HeadContent>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
</HeadContent>

<div class="upload-container">
    <div class="upload-header">
        <h2>üì§ Caricamento Multiplo Documenti</h2>
        <button class="btn btn-secondary" @onclick="GoBack">
            ‚Üê Torna ai Documenti
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            ‚ùå @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            ‚úÖ @successMessage
        </div>
    }

    <div class="upload-card">
        <EditForm Model="@uploadModel" OnValidSubmit="HandleUpload">
            @* Category Selection - Must be selected first *@
            <div class="form-section">
                <label class="form-label required">
                    üìÅ Categoria (per tutti i documenti)
                </label>
                <input type="text" @bind="selectedCategory" class="form-control" placeholder="es: Contratti, Fatture, Documenti Legali" required />
                <small style="color: #666; display: block; margin-top: 0.5rem;">
                    ‚ÑπÔ∏è Tutti i documenti saranno archiviati in questa categoria
                </small>
            </div>

            @* File Selection *@
            <div class="form-section">
                <h3>Seleziona File</h3>
                <div class="file-upload-wrapper">
                    <label for="fileInput" class="file-upload-button" style="cursor: pointer;">
                        <span class="upload-icon-large">üì§</span>
                        <span class="upload-content">
                            @if (selectedFiles == null || selectedFiles.Count == 0)
                            {
                                <span class="upload-title">Scegli file multipli da caricare</span>
                                <span class="upload-subtitle">Clicca qui o trascina i file</span>
                            }
                            else
                            {
                                <span class="upload-title">@selectedFiles.Count file selezionati</span>
                                <span class="upload-subtitle">Clicca per modificare la selezione</span>
                            }
                        </span>
                    </label>
                    <InputFile id="fileInput" OnChange="@HandleFileSelection" class="file-input-hidden" accept="@GetAcceptedExtensions()" multiple />
                </div>
                
                @if (selectedFiles != null && selectedFiles.Count > 0)
                {
                    <div class="files-list">
                        <h4>File selezionati (@selectedFiles.Count):</h4>
                        @foreach (var file in selectedFiles)
                        {
                            <div class="file-item">
                                <div class="file-icon">üìÑ</div>
                                <div class="file-details">
                                    <p><strong>@file.Name</strong></p>
                                    <p>Size: @FormatFileSize(file.Size) | Type: @file.ContentType</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            @* Visibility Selection *@
            <div class="form-section">
                <label class="form-label">
                    üëÅÔ∏è Visibilit√† Documenti
                </label>
                <select @bind="selectedVisibility" class="form-control">
                    <option value="0">üîí Privato - Solo tu puoi vedere i documenti</option>
                    <option value="1">üë• Condiviso - Condividi con utenti specifici</option>
                    <option value="2">üè¢ Organizzazione - Tutti i membri dell'organizzazione</option>
                    <option value="3">üåê Pubblico - Tutti possono vedere</option>
                </select>
            </div>

            @* Tags *@
            <div class="form-section">
                <label class="form-label">
                    üè∑Ô∏è Tag (separati da virgola, applicati a tutti i documenti)
                </label>
                <input type="text" @bind="documentTags" class="form-control" placeholder="es: contratto, legale, 2024" />
            </div>

            @* Notes *@
            <div class="form-section">
                <label class="form-label">
                    üìù Note (applicate a tutti i documenti)
                </label>
                <textarea @bind="documentNotes" class="form-control" rows="3" placeholder="Aggiungi note sui documenti..."></textarea>
            </div>

            @* Processing Options *@
            <div class="form-section">
                <h3>‚öôÔ∏è Opzioni di Elaborazione</h3>
                <div class="processing-options">
                    <label class="option-checkbox">
                        <input type="checkbox" @bind="enableTextExtraction" />
                        <span class="option-label">
                            <span class="option-title">üìù Estrazione testo automatica</span>
                            <span class="option-description">Estrai il contenuto testuale dal documento</span>
                        </span>
                    </label>
                    
                    <label class="option-checkbox">
                        <input type="checkbox" @bind="enableTagExtraction" />
                        <span class="option-label">
                            <span class="option-title">üè∑Ô∏è Estrai tag automaticamente con AI</span>
                            <span class="option-description">Lascia che l'AI estragga tag e parole chiave rilevanti</span>
                        </span>
                    </label>
                    
                    <label class="option-checkbox">
                        <input type="checkbox" @bind="enableMetadataExtraction" />
                        <span class="option-label">
                            <span class="option-title">üìã Estrai metadati strutturati con AI</span>
                            <span class="option-description">Estrai metadati strutturati come numeri di fattura, date, autori, ecc.</span>
                        </span>
                    </label>
                    
                    <label class="option-checkbox">
                        <input type="checkbox" @bind="enableEmbeddings" />
                        <span class="option-label">
                            <span class="option-title">üß† Genera embeddings (Gemini)</span>
                            <span class="option-description">Genera embeddings vettoriali per la ricerca semantica</span>
                        </span>
                    </label>
                    
                    <label class="option-checkbox">
                        <input type="checkbox" @bind="generateChunkEmbeddingsImmediately" />
                        <span class="option-label">
                            <span class="option-title">‚ö° Genera embeddings chunks immediatamente</span>
                            <span class="option-description">Se disabilitato (consigliato), i chunks vengono creati subito ma gli embeddings generati in background per upload pi√π veloci. Se abilitato, genera tutto durante l'upload (pi√π lento ma completo subito).</span>
                        </span>
                    </label>
                </div>
            </div>

            @* Upload Progress *@
            @if (isUploading)
            {
                <div class="upload-progress-section">
                    <h3>üìä Progresso Caricamento</h3>
                    <div class="overall-progress">
                        <div class="progress-bar-container">
                            <div class="progress-bar" style="width: @GetOverallProgressPercentage()%"></div>
                        </div>
                        <p>@completedFiles / @totalFiles file completati</p>
                    </div>
                    
                    <div class="files-progress-list">
                        @foreach (var status in fileStatuses)
                        {
                            <div class="file-progress-item status-@status.Status.ToLower()">
                                <div class="file-progress-icon">
                                    @if (status.Status == "Processing")
                                    {
                                        <span class="spinner-small"></span>
                                    }
                                    else if (status.Status == "Completed")
                                    {
                                        <span>‚úÖ</span>
                                    }
                                    else if (status.Status == "Error")
                                    {
                                        <span>‚ùå</span>
                                    }
                                    else
                                    {
                                        <span>‚è≥</span>
                                    }
                                </div>
                                <div class="file-progress-details">
                                    <p><strong>@status.FileName</strong></p>
                                    <p class="status-text">@status.StatusMessage</p>
                                    @if (!string.IsNullOrEmpty(status.ErrorMessage))
                                    {
                                        <p class="error-text">@status.ErrorMessage</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* Upload Button *@
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@(isUploading || selectedFiles == null || selectedFiles.Count == 0 || string.IsNullOrWhiteSpace(selectedCategory))">
                    @if (isUploading)
                    {
                        <span>‚è≥ Caricamento in corso...</span>
                    }
                    else
                    {
                        <span>üì§ Carica @(selectedFiles?.Count ?? 0) Documenti</span>
                    }
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isUploading">
                    Annulla
                </button>
            </div>
            
            @if (selectedFiles == null || selectedFiles.Count == 0 || string.IsNullOrWhiteSpace(selectedCategory))
            {
                <div class="help-text">
                    <small>
                        @if (string.IsNullOrWhiteSpace(selectedCategory))
                        {
                            <span>‚ÑπÔ∏è Seleziona una categoria prima di procedere</span>
                        }
                        else if (selectedFiles == null || selectedFiles.Count == 0)
                        {
                            <span>‚ÑπÔ∏è Seleziona almeno un file da caricare</span>
                        }
                    </small>
                </div>
            }
        </EditForm>
    </div>
</div>

