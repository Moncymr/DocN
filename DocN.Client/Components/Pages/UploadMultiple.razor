@code {
    // Upload model
    private class UploadModel
    {
        public string? Category { get; set; }
        public int Visibility { get; set; }
    }

    private UploadModel uploadModel = new();
    
    // File selection
    private List<IBrowserFile>? selectedFiles;
    
    // Common settings
    private string selectedCategory = string.Empty;
    private int selectedVisibility = 0;
    private string? documentTags;
    private string? documentNotes;
    
    // Processing options
    private bool enableTextExtraction = true;
    private bool enableEmbeddings = true;
    private bool enableTagExtraction = true;
    private bool enableMetadataExtraction = true;
    private bool generateChunkEmbeddingsImmediately = false;
    
    // Upload state
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;
    private string currentUserId = string.Empty;
    
    // Progress tracking
    private List<FileUploadStatus> fileStatuses = new();
    private int totalFiles = 0;
    private int completedFiles = 0;
    
    private class FileUploadStatus
    {
        public string FileName { get; set; } = string.Empty;
        public string Status { get; set; } = "Pending"; // Pending, Processing, Completed, Error
        public string StatusMessage { get; set; } = "In attesa...";
        public string? ErrorMessage { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        currentUserId = userId ?? string.Empty;
    }

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFiles = e.GetMultipleFiles(100).ToList(); // Max 100 files
        errorMessage = null;
        successMessage = null;
        fileStatuses.Clear();

        // Validate each file
        var maxSize = Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50) * 1024 * 1024;
        var allowedExtensions = Configuration.GetSection("FileStorage:AllowedExtensions").Get<string[]>() 
            ?? new[] { ".pdf", ".doc", ".docx", ".xlsx", ".xls", ".pptx", ".ppt", ".txt", ".md", ".csv", ".json", ".xml", ".html", ".htm", ".png", ".jpg", ".jpeg", ".bmp", ".tiff", ".tif", ".gif", ".webp" };

        var invalidFiles = new List<string>();
        var validFiles = new List<IBrowserFile>();

        foreach (var file in selectedFiles)
        {
            if (file.Size > maxSize)
            {
                invalidFiles.Add($"{file.Name} (supera {Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50)}MB)");
                continue;
            }

            var extension = Path.GetExtension(file.Name).ToLowerInvariant();
            if (!allowedExtensions.Contains(extension))
            {
                invalidFiles.Add($"{file.Name} (formato {extension} non supportato)");
                continue;
            }

            validFiles.Add(file);
        }

        selectedFiles = validFiles;

        if (invalidFiles.Any())
        {
            errorMessage = $"File non validi rimossi: {string.Join(", ", invalidFiles)}";
        }

        if (selectedFiles.Count == 0)
        {
            errorMessage = "Nessun file valido selezionato.";
        }
    }

    private async Task HandleUpload()
    {
        if (selectedFiles == null || selectedFiles.Count == 0)
        {
            errorMessage = "Seleziona almeno un file da caricare";
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedCategory))
        {
            errorMessage = "Seleziona una categoria per i documenti";
            return;
        }

        isUploading = true;
        errorMessage = null;
        successMessage = null;
        totalFiles = selectedFiles.Count;
        completedFiles = 0;

        // Initialize status for each file
        fileStatuses = selectedFiles.Select(f => new FileUploadStatus 
        { 
            FileName = f.Name,
            Status = "Pending",
            StatusMessage = "In attesa..."
        }).ToList();

        try
        {
            // Create upload directory if it doesn't exist
            var uploadPath = Configuration.GetValue<string>("FileStorage:UploadPath") ?? "C:\\DocumentArchive\\Uploads";
            Directory.CreateDirectory(uploadPath);

            // Process each file
            var tasks = selectedFiles.Select((file, index) => ProcessFileAsync(file, index, uploadPath)).ToArray();
            await Task.WhenAll(tasks);

            // Check results
            var successCount = fileStatuses.Count(s => s.Status == "Completed");
            var errorCount = fileStatuses.Count(s => s.Status == "Error");

            if (errorCount == 0)
            {
                successMessage = $"‚úÖ {successCount} documenti caricati con successo!";
                await Task.Delay(2000);
                Navigation.NavigateTo("/documents");
            }
            else if (successCount > 0)
            {
                successMessage = $"‚ö†Ô∏è {successCount} documenti caricati, {errorCount} con errori. Controlla i dettagli sopra.";
            }
            else
            {
                errorMessage = $"‚ùå Tutti i {errorCount} documenti hanno generato errori. Controlla i dettagli sopra.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore durante il caricamento: {ex.Message}";
            await LogService.LogErrorAsync("UploadMultiple", "Bulk upload error", ex.Message, 
                userId: currentUserId, stackTrace: ex.StackTrace);
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task ProcessFileAsync(IBrowserFile file, int index, string uploadPath)
    {
        var status = fileStatuses[index];
        
        try
        {
            // Update status
            status.Status = "Processing";
            status.StatusMessage = "Elaborazione in corso...";
            await InvokeAsync(StateHasChanged);

            string? savedFilePath = null;
            string extractedText = string.Empty;
            float[]? embedding = null;
            List<string>? aiExtractedTags = null;
            Dictionary<string, string>? extractedMetadata = null;
            int? pageCount = null;
            string? detectedLanguage = null;

            // Step 1: Save file
            var fileName = $"{Guid.NewGuid()}_{file.Name}";
            var filePath = Path.Combine(uploadPath, fileName);
            savedFilePath = filePath;

            using (var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024))
            {
                using var fileStream = File.Create(filePath);
                await stream.CopyToAsync(fileStream);
            }

            // Step 2: Extract text
            if (enableTextExtraction)
            {
                status.StatusMessage = "Estrazione testo...";
                await InvokeAsync(StateHasChanged);

                try
                {
                    using var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
                    var processingResult = await FileProcessingService.ProcessFileAsync(stream, file.Name, file.ContentType);
                    
                    if (processingResult.Success)
                    {
                        extractedText = processingResult.ExtractedText;
                        pageCount = processingResult.PageCount;
                        detectedLanguage = processingResult.DetectedLanguage;
                        
                        if (processingResult.Metadata != null && processingResult.Metadata.Any())
                        {
                            extractedMetadata = new Dictionary<string, string>(processingResult.Metadata);
                        }
                    }
                }
                catch (Exception ex)
                {
                    await LogService.LogWarningAsync("UploadMultiple", "Text extraction failed", 
                        $"File: {file.Name}, Error: {ex.Message}", userId: currentUserId, fileName: file.Name);
                }
            }

            // Step 3: Generate embeddings
            if (enableEmbeddings && !string.IsNullOrEmpty(extractedText))
            {
                status.StatusMessage = "Generazione embeddings...";
                await InvokeAsync(StateHasChanged);

                try
                {
                    embedding = await AIService.GenerateEmbeddingAsync(extractedText);
                }
                catch (Exception ex)
                {
                    await LogService.LogWarningAsync("UploadMultiple", "Embedding generation failed", 
                        $"File: {file.Name}, Error: {ex.Message}", userId: currentUserId, fileName: file.Name);
                }
            }

            // Step 4: Extract tags
            if (enableTagExtraction && !string.IsNullOrEmpty(extractedText))
            {
                status.StatusMessage = "Estrazione tag...";
                await InvokeAsync(StateHasChanged);

                try
                {
                    aiExtractedTags = await AIService.ExtractTagsAsync(extractedText);
                }
                catch (Exception ex)
                {
                    await LogService.LogWarningAsync("UploadMultiple", "Tag extraction failed", 
                        $"File: {file.Name}, Error: {ex.Message}", userId: currentUserId, fileName: file.Name);
                }
            }

            // Step 5: Extract metadata
            if (enableMetadataExtraction && !string.IsNullOrEmpty(extractedText))
            {
                status.StatusMessage = "Estrazione metadati...";
                await InvokeAsync(StateHasChanged);

                try
                {
                    var aiMetadata = await AIService.ExtractMetadataAsync(extractedText, file.Name);
                    if (aiMetadata != null && aiMetadata.Any())
                    {
                        if (extractedMetadata == null)
                        {
                            extractedMetadata = aiMetadata;
                        }
                        else
                        {
                            foreach (var kvp in aiMetadata)
                            {
                                extractedMetadata[kvp.Key] = kvp.Value;
                            }
                        }
                    }
                }
                catch (Exception ex)
                {
                    await LogService.LogWarningAsync("UploadMultiple", "Metadata extraction failed", 
                        $"File: {file.Name}, Error: {ex.Message}", userId: currentUserId, fileName: file.Name);
                }
            }

            // Step 6: Create document
            status.StatusMessage = "Salvataggio documento...";
            await InvokeAsync(StateHasChanged);

            var document = new Document
            {
                FileName = file.Name,
                FilePath = filePath,
                ContentType = file.ContentType,
                FileSize = file.Size,
                ExtractedText = extractedText,
                ActualCategory = selectedCategory,
                Visibility = (DocumentVisibility)selectedVisibility,
                OwnerId = string.IsNullOrEmpty(currentUserId) ? null : currentUserId,
                UploadedAt = DateTime.UtcNow,
                Notes = documentNotes,
                PageCount = pageCount,
                DetectedLanguage = detectedLanguage,
                ProcessingStatus = "Completed",
                AIAnalysisDate = DateTime.UtcNow,
                AITagsJson = GetSerializedTags(aiExtractedTags),
                ExtractedMetadataJson = GetSerializedMetadata(extractedMetadata)
            };

            // Set embedding
            if (embedding != null && embedding.Length > 0)
            {
                if (embedding.Length == 768)
                {
                    document.EmbeddingVector768 = embedding;
                    document.EmbeddingDimension = 768;
                }
                else if (embedding.Length == 1536)
                {
                    document.EmbeddingVector1536 = embedding;
                    document.EmbeddingDimension = 1536;
                }
            }

            // Parse and add tags
            var allTags = new List<string>();
            if (aiExtractedTags != null) allTags.AddRange(aiExtractedTags);
            if (!string.IsNullOrWhiteSpace(documentTags))
            {
                allTags.AddRange(documentTags.Split(',').Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)));
            }

            foreach (var tagName in allTags.Distinct())
            {
                document.Tags.Add(new DocumentTag
                {
                    Name = tagName,
                    Document = document
                });
            }

            // Save to database
            await DocumentService.CreateDocumentAsync(document, generateChunkEmbeddingsImmediately);

            // Success
            status.Status = "Completed";
            status.StatusMessage = "Completato con successo";
            completedFiles++;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            status.Status = "Error";
            status.StatusMessage = "Errore durante l'elaborazione";
            status.ErrorMessage = ex.Message;
            
            await LogService.LogErrorAsync("UploadMultiple", "File processing error", 
                $"File: {file.Name}, Error: {ex.Message}", 
                userId: currentUserId, fileName: file.Name, stackTrace: ex.StackTrace);
            
            await InvokeAsync(StateHasChanged);
        }
    }

    private string? GetSerializedTags(List<string>? tags)
    {
        if (tags == null || !tags.Any())
            return null;
            
        try
        {
            return System.Text.Json.JsonSerializer.Serialize(tags);
        }
        catch
        {
            return null;
        }
    }

    private string? GetSerializedMetadata(Dictionary<string, string>? metadata)
    {
        if (metadata == null || !metadata.Any())
            return null;
            
        try
        {
            return System.Text.Json.JsonSerializer.Serialize(metadata);
        }
        catch
        {
            return null;
        }
    }

    private string GetOverallProgressPercentage()
    {
        if (totalFiles == 0) return "0";
        return ((completedFiles * 100.0) / totalFiles).ToString("F0");
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetAcceptedExtensions()
    {
        var extensions = Configuration.GetSection("FileStorage:AllowedExtensions").Get<string[]>() 
            ?? new[] { ".pdf", ".doc", ".docx", ".xlsx", ".xls", ".pptx", ".ppt", ".txt", ".md", ".csv", ".json", ".xml", ".html", ".htm", ".png", ".jpg", ".jpeg", ".bmp", ".tiff", ".tif", ".gif", ".webp" };
        return string.Join(",", extensions);
    }

