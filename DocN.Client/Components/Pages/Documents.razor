@page "/documents"
@page "/documents/{Page:int}"
@inject IDocumentService DocumentService
@inject IDocumentStatisticsService StatisticsService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Documents - DocN</PageTitle>

<div class="documents-container">
    <div class="header">
        <h2>üìÅ My Documents</h2>
        <button class="btn btn-primary" @onclick="ShowUploadDialog">
            <span>‚ûï Upload Document</span>
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading documents...</div>
    }
    else if (documents == null || !documents.Any())
    {
        <div class="empty-state">
            <h3>No documents yet</h3>
            <p>Upload your first document to get started!</p>
        </div>
    }
    else
    {
        <div class="documents-grid">
            @foreach (var doc in documents)
            {
                <div class="document-card">
                    <div class="document-icon">üìÑ</div>
                    <div class="document-info">
                        <h4>@doc.FileName</h4>
                        <p class="category">
                            Category: <strong>@(doc.ActualCategory ?? doc.SuggestedCategory ?? "Uncategorized")</strong>
                        </p>
                        @if (!string.IsNullOrEmpty(doc.CategoryReasoning))
                        {
                            <p class="reasoning" title="@doc.CategoryReasoning">
                                üí° @(TruncateText(doc.CategoryReasoning, 100))
                            </p>
                        }
                        <div class="document-meta">
                            <span class="visibility-badge @GetVisibilityClass(doc.Visibility)">
                                @doc.Visibility.ToString()
                            </span>
                            <span>üìä @doc.AccessCount views</span>
                            <span>üìÖ @doc.UploadedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                    <div class="document-actions">
                        <button class="btn-icon" @onclick="() => DownloadDocument(doc.Id)" title="Download">
                            ‚¨áÔ∏è
                        </button>
                        <button class="btn-icon" @onclick="() => ShareDocument(doc.Id)" title="Share">
                            üîó
                        </button>
                        <button class="btn-icon" @onclick="() => ViewDocument(doc.Id)" title="View">
                            üëÅÔ∏è
                        </button>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="pagination">
                <button class="btn" disabled="@(currentPage == 1)" @onclick="PreviousPage">‚Üê Previous</button>
                <span>Page @currentPage of @totalPages</span>
                <button class="btn" disabled="@(currentPage == totalPages)" @onclick="NextPage">Next ‚Üí</button>
            </div>
        }
    }
</div>

<style>
