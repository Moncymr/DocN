@page "/upload"
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IDocumentService DocumentService
@inject IMultiProviderAIService AIService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@rendermode InteractiveServer

<PageTitle>Upload Document - DocN</PageTitle>

<div class="upload-container">
    <div class="upload-header">
        <h2>üì§ Upload Document</h2>
        <button class="btn btn-secondary" @onclick="GoBack">
            ‚Üê Back to Documents
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            ‚ùå @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            ‚úÖ @successMessage
        </div>
    }

    <div class="upload-card">
        <EditForm Model="@uploadModel" OnValidSubmit="HandleSaveToDatabase">
            <div class="form-section">
                <h3>üìÇ Select File</h3>
                <div class="file-upload-wrapper">
                    <label for="fileInput" class="file-upload-button">
                        <span class="upload-icon-large">üì§</span>
                        <span class="upload-content">
                            @if (selectedFile == null)
                            {
                                <span class="upload-title">Choose a file to upload</span>
                                <span class="upload-subtitle">Click here or drag and drop</span>
                            }
                            else
                            {
                                <span class="upload-title">File selected - Click to change</span>
                                <span class="upload-subtitle">@selectedFile.Name</span>
                            }
                        </span>
                    </label>
                    <InputFile id="fileInput" OnChange="HandleFileSelection" class="file-input-hidden" accept="@GetAcceptedExtensions()" />
                </div>
                
                @if (selectedFile != null && !isProcessing)
                {
                    <div class="file-info">
                        <div class="file-icon">üìÑ</div>
                        <div class="file-details">
                            <p><strong>@selectedFile.Name</strong></p>
                            <p>Size: @FormatFileSize(selectedFile.Size)</p>
                            <p>Type: @selectedFile.ContentType</p>
                        </div>
                    </div>
                    
                    @if (!processingStarted)
                    {
                        <div class="process-button-wrapper">
                            <button type="button" class="btn btn-process" @onclick="StartProcessing">
                                üöÄ Elabora Documento
                            </button>
                        </div>
                    }
                }
            </div>

            @if (isProcessing || processingComplete)
            {
                <div class="processing-section">
                    <h3>‚öôÔ∏è Elaborazione Documento</h3>
                    
                    <!-- Step 1: Text Extraction -->
                    <div class="processing-step @GetStepClass(ProcessingStep.TextExtraction)">
                        <div class="step-header">
                            <span class="step-icon">
                                @if (currentStep == ProcessingStep.TextExtraction && isProcessing)
                                {
                                    <div class="spinner-small"></div>
                                }
                                else if (textExtractionComplete)
                                {
                                    <span>‚úÖ</span>
                                }
                                else
                                {
                                    <span>üìù</span>
                                }
                            </span>
                            <span class="step-title">Estrazione Testo</span>
                        </div>
                        @if (textExtractionComplete && !string.IsNullOrEmpty(extractedText))
                        {
                            <div class="step-result">
                                <div class="result-card">
                                    <h4>üìÑ Anteprima Testo Estratto</h4>
                                    <div class="text-preview">
                                        @GetTextPreview(extractedText, 500)
                                    </div>
                                    <p class="text-stats">Caratteri totali: @extractedText.Length</p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Step 2: Embedding Generation -->
                    <div class="processing-step @GetStepClass(ProcessingStep.EmbeddingGeneration)">
                        <div class="step-header">
                            <span class="step-icon">
                                @if (currentStep == ProcessingStep.EmbeddingGeneration && isProcessing)
                                {
                                    <div class="spinner-small"></div>
                                }
                                else if (embeddingGenerationComplete)
                                {
                                    <span>‚úÖ</span>
                                }
                                else
                                {
                                    <span>üß†</span>
                                }
                            </span>
                            <span class="step-title">Generazione Embedding</span>
                        </div>
                        @if (embeddingGenerationComplete && embeddingVector != null)
                        {
                            <div class="step-result">
                                <div class="result-card">
                                    <h4>üß† Embedding Vettoriali Creati</h4>
                                    <p>‚ú® Generato con successo embedding vettoriale a @embeddingVector.Length dimensioni</p>
                                    <p class="embedding-preview">Anteprima vettore: [@string.Join(", ", embeddingVector.Take(5).Select(v => v.ToString("F4")))]...</p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Step 3: AI Analysis -->
                    <div class="processing-step @GetStepClass(ProcessingStep.AIAnalysis)">
                        <div class="step-header">
                            <span class="step-icon">
                                @if (currentStep == ProcessingStep.AIAnalysis && isProcessing)
                                {
                                    <div class="spinner-small"></div>
                                }
                                else if (aiAnalysisComplete)
                                {
                                    <span>‚úÖ</span>
                                }
                                else
                                {
                                    <span>ü§ñ</span>
                                }
                            </span>
                            <span class="step-title">Analisi AI</span>
                        </div>
                        @if (aiAnalysisComplete && !string.IsNullOrEmpty(suggestedCategory))
                        {
                            <div class="step-result">
                                <div class="result-card">
                                    <h4>ü§ñ Suggerimento Categoria AI</h4>
                                    <div class="category-suggestion">
                                        <span class="category-badge">@suggestedCategory</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(categoryReasoning))
                                    {
                                        <div class="reasoning-box">
                                            <h5>üí° Perch√© questa categoria?</h5>
                                            <p>@categoryReasoning</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (processingComplete)
            {
                <div class="form-section">
                    <h3>üè∑Ô∏è Scegli Categoria</h3>
                    <label class="category-choice">
                        <input type="radio" name="categoryChoice" checked="@(!useCustomCategory)" @onchange="@(() => useCustomCategory = false)" />
                        <span>Accetta suggerimento AI: <strong>@suggestedCategory</strong></span>
                    </label>
                    
                    <label class="category-choice">
                        <input type="radio" name="categoryChoice" checked="@useCustomCategory" @onchange="@(() => useCustomCategory = true)" />
                        <span>Usa categoria personalizzata</span>
                    </label>
                    
                    @if (useCustomCategory)
                    {
                        <input type="text" @bind="customCategory" class="form-control" placeholder="Inserisci categoria personalizzata" />
                    }
                </div>

                <div class="form-section">
                    <h3>üîí Visibilit√† Documento</h3>
                    <select @bind="selectedVisibility" class="form-control">
                        <option value="0">üîí Privato - Solo tu puoi vedere questo documento</option>
                        <option value="1">üë• Condiviso - Condividi con utenti specifici</option>
                        <option value="2">üè¢ Organizzazione - Tutti i membri dell'organizzazione</option>
                        <option value="3">üåê Pubblico - Tutti possono vedere</option>
                    </select>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>üíæ Salvataggio...</span>
                        }
                        else
                        {
                            <span>üíæ Salva nel Database</span>
                        }
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isSaving">
                        Cancel
                    </button>
                </div>
            }
        </EditForm>
    </div>
</div>

