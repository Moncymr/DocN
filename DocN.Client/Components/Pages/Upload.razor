    private async Task HandleUpload()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file to upload";
            return;
        }
        
        if (!processingComplete)
        {
            errorMessage = "Please process the document first before saving";
            return;
        }

        isUploading = true;
        errorMessage = null;
        successMessage = null;
        string? savedFilePath = null;

        try
        {
            // Determine the final category to use
            string? finalCategory = null;
            
            if (useCustomCategory || string.IsNullOrEmpty(suggestedCategory))
            {
                // Use custom category (either user chose custom or no AI suggestion)
                finalCategory = string.IsNullOrWhiteSpace(customCategory) ? null : customCategory;
            }
            else
            {
                // Use AI suggested category
                finalCategory = suggestedCategory;
            }
            
            // If no category at all, use a default
            if (string.IsNullOrEmpty(finalCategory))
            {
                finalCategory = "Uncategorized";
            }
            
            // Create upload directory if it doesn't exist
            var uploadPath = Configuration.GetValue<string>("FileStorage:UploadPath") ?? "C:\\DocumentArchive\\Uploads";
            Directory.CreateDirectory(uploadPath);

            // Save file
            var fileName = $"{Guid.NewGuid()}_{selectedFile.Name}";
            var filePath = Path.Combine(uploadPath, fileName);
            savedFilePath = filePath;

            using (var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024))
            {
                using var fileStream = File.Create(filePath);
                await stream.CopyToAsync(fileStream);
            }

            // Create document record using already-processed data
            var document = new Document
            {
                FileName = selectedFile.Name,
                FilePath = filePath,
                ContentType = selectedFile.ContentType,
                FileSize = selectedFile.Size,
                ExtractedText = extractedText,
                SuggestedCategory = suggestedCategory,
                CategoryReasoning = categoryReasoning,
                ActualCategory = finalCategory,
                Visibility = (DocumentVisibility)selectedVisibility,
                OwnerId = string.IsNullOrEmpty(currentUserId) ? null : currentUserId,
                UploadedAt = DateTime.UtcNow,
                
                // NEW FIELDS - Populate all missing fields
                Notes = documentNotes,
                PageCount = pageCount,
                DetectedLanguage = detectedLanguage,
                ProcessingStatus = processingStatus,
                ProcessingError = processingError,
                AIAnalysisDate = aiAnalysisDate,
                AITagsJson = GetSerializedTags(aiExtractedTags),
                ExtractedMetadataJson = GetSerializedMetadata(extractedMetadata),
                TenantId = null // Will be set from user's tenant if available
            };
            
            // Set embedding in the appropriate field based on dimension
            if (embedding != null && embedding.Length > 0)
            {
                if (embedding.Length == 768)
                {
                    document.EmbeddingVector768 = embedding;
                    document.EmbeddingDimension = 768;
                }
                else if (embedding.Length == 1536)
                {
                    document.EmbeddingVector1536 = embedding;
                    document.EmbeddingDimension = 1536;
                }
                else
                {
                    // Unsupported dimension - set error message
                    errorMessage = $"‚ö†Ô∏è Unsupported embedding dimension: {embedding.Length}. Expected 768 or 1536.";
                }
            }

            // Set TenantId from user's tenant if user is authenticated
            if (!string.IsNullOrEmpty(currentUserId))
            {
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var tenantClaim = authState.User.FindFirst("TenantId");
                if (tenantClaim != null && int.TryParse(tenantClaim.Value, out var tenantId))
                {
                    document.TenantId = tenantId;
                }
            }

            // Parse and add tags as DocumentTag entities
            if (!string.IsNullOrWhiteSpace(documentTags))
            {
                var tagNames = documentTags.Split(',')
                    .Select(t => t.Trim())
                    .Where(t => !string.IsNullOrEmpty(t))
                    .Distinct()
                    .ToList();

                foreach (var tagName in tagNames)
                {
                    document.Tags.Add(new DocumentTag
                    {
                        Name = tagName,
                        Document = document
                    });
                }
            }

            // Save to database - wrapped in try-catch for better error handling
            try
            {
                await DocumentService.CreateDocumentAsync(document, generateChunkEmbeddingsImmediately);
                
                // Save similar documents if they were found
                if (similarDocuments != null && similarDocuments.Any())
                {
                    await DocumentService.SaveSimilarDocumentsAsync(document.Id, similarDocuments);
                }
                
                successMessage = $"‚úÖ Document '{selectedFile.Name}' saved successfully!";
                
                // Wait a moment then redirect
                await Task.Delay(2000);
                Navigation.NavigateTo("/documents");
            }
            catch (Exception dbEx)
            {
                // Database save failed - file is on disk but not in database
                // Clean up the orphaned file to prevent disk space waste
                try
                {
                    if (File.Exists(filePath))
                    {
                        File.Delete(filePath);
                        Console.WriteLine($"Deleted orphaned file after database save failure: {filePath}");
                    }
                }
                catch (Exception cleanupEx)
                {
                    Console.WriteLine($"Failed to delete orphaned file: {filePath}. Error: {cleanupEx.Message}");
                }

                // Check if this is a vector dimension mismatch error - if so, show the detailed error message
                // since it contains actionable steps for the user/administrator
                // Check both the main exception and inner exceptions for dimension mismatch
                var isDimensionMismatch = EmbeddingValidationHelper.IsVectorDimensionMismatchError(dbEx.Message);
                if (!isDimensionMismatch && dbEx.InnerException != null)
                {
                    isDimensionMismatch = EmbeddingValidationHelper.IsVectorDimensionMismatchError(dbEx.InnerException.Message);
                }
                
                if (isDimensionMismatch)
                {
                    errorMessage = $"‚ö†Ô∏è ERRORE CRITICO - Salvataggio database fallito\n" +
                                  $"üìÑ File: {selectedFile.Name}\n" +
                                  $"Percorso file: {filePath}\n" +
                                  $"(Il file √® stato rimosso dal disco)\n\n" +
                                  $"{dbEx.Message}";
                }
                else
                {
                    errorMessage = $"‚ö†Ô∏è ERRORE CRITICO: Il salvataggio nel database √® fallito durante la creazione. " +
                                  $"Il file su disco √® stato rimosso automaticamente. " +
                                  $"ID di riferimento per l'amministratore: {Path.GetFileName(filePath)}. " +
                                  $"Contattare l'amministratore se il problema persiste.";
                }
                
                // Log the error with full details for administrator including inner exceptions
                var fullErrorMessage = dbEx.Message;
                var innerEx = dbEx.InnerException;
                var depth = 1;
                while (innerEx != null && depth <= 3)
                {
                    fullErrorMessage += $"\n--- Inner Exception {depth} ---\n{innerEx.Message}";
                    innerEx = innerEx.InnerException;
                    depth++;
                }
                
                await LogService.LogErrorAsync("Upload", "CRITICAL ERROR - File saved but DB create failed", 
                    $"File name: {selectedFile.Name}\nFile path: {filePath}\nError: {fullErrorMessage}", 
                    userId: currentUserId, 
                    fileName: selectedFile.Name, 
                    stackTrace: dbEx.StackTrace);
                
                // Force UI update to show error message
                StateHasChanged();
                
                // Don't redirect on error
                return;
            }
        }
        catch (Exception ex)
        {
            // File save or other error
            if (savedFilePath != null && File.Exists(savedFilePath))
            {
                // File was created but something else went wrong
                errorMessage = $"‚ùå Errore durante il processo di salvataggio. Il file potrebbe essere stato salvato parzialmente. " +
                              $"ID di riferimento: {Path.GetFileName(savedFilePath)}. Contattare l'amministratore.";
                
                // Log full details for debugging - this will persist even if document save fails
                await LogService.LogErrorAsync("Upload", "Upload error - File saved but other issue", 
                    $"File path: {savedFilePath}\nError: {ex.Message}", 
                    userId: currentUserId, 
                    fileName: selectedFile.Name, 
                    stackTrace: ex.StackTrace);
            }
            else
            {
                // File was not saved
                errorMessage = "‚ùå Errore durante il salvataggio del file. Riprovare o contattare l'amministratore se il problema persiste.";
                
                // Log full error details - this will persist even if document save fails
                await LogService.LogErrorAsync("Upload", "Upload error - File not saved", 
                    $"Error: {ex.Message}", 
                    userId: currentUserId, 
                    fileName: selectedFile.Name, 
                    stackTrace: ex.StackTrace);
            }
            
            // Force UI update to show error message
            StateHasChanged();
        }
        finally
        {
            isUploading = false;
        }
    }

