                    Console.WriteLine($"Category suggestion exception: {ex.Message}");
                    Console.WriteLine($"Stack trace: {ex.StackTrace}");
                }
            }

            // Step 4: AI tag extraction - always execute even if embeddings failed
            if (enableTagExtraction && !string.IsNullOrEmpty(extractedText))
            {
                tagExtractionAttempted = true;
                processingStep = "Extracting tags from document...";
                StateHasChanged();
                await Task.Delay(UI_UPDATE_DELAY_MS);

