@code {
    // UI timing constants
    private const int UI_DELAY_BETWEEN_STEPS_MS = 800;
    private const int UI_DELAY_BEFORE_STEP_MS = 500;
    private const int DEFAULT_EMBEDDING_SIZE = 1536;
    
    private enum ProcessingStep
    {
        None,
        TextExtraction,
        EmbeddingGeneration,
        AIAnalysis
    }

    private class UploadModel
    {
        public string? Category { get; set; }
        public int Visibility { get; set; }
    }

    private UploadModel uploadModel = new();
    private IBrowserFile? selectedFile;
    private bool isProcessing = false;
    private bool isSaving = false;
    private bool processingStarted = false;
    private bool processingComplete = false;
    private bool useCustomCategory = false;
    private string? customCategory;
    private string? suggestedCategory;
    private string? categoryReasoning;
    private int selectedVisibility = 0;
    private string? errorMessage;
    private string? successMessage;
    private string currentUserId = string.Empty;
    
    // Processing state
    private ProcessingStep currentStep = ProcessingStep.None;
    private bool textExtractionComplete = false;
    private bool embeddingGenerationComplete = false;
    private bool aiAnalysisComplete = false;
    
    // Processed data
    private string extractedText = string.Empty;
    private float[]? embeddingVector = null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        
        // Only set currentUserId if user is authenticated, otherwise leave it empty
        currentUserId = userId ?? string.Empty;
    }

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = null;
        successMessage = null;
        
        // Reset processing state
        processingStarted = false;
        processingComplete = false;
        textExtractionComplete = false;
        embeddingGenerationComplete = false;
        aiAnalysisComplete = false;
        extractedText = string.Empty;
        embeddingVector = null;
        suggestedCategory = null;
        categoryReasoning = null;
        currentStep = ProcessingStep.None;

        // Validate file size
        var maxSize = Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50) * 1024 * 1024;
        if (selectedFile.Size > maxSize)
        {
            errorMessage = $"File size exceeds maximum allowed size of {Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50)}MB";
            selectedFile = null;
            return;
        }

        // Validate file extension
        var allowedExtensions = Configuration.GetSection("FileStorage:AllowedExtensions").Get<string[]>() ?? new[] { ".pdf", ".docx", ".txt" };
        var extension = Path.GetExtension(selectedFile.Name).ToLowerInvariant();
        if (!allowedExtensions.Contains(extension))
        {
            errorMessage = $"File type '{extension}' is not allowed. Allowed types: {string.Join(", ", allowedExtensions)}";
            selectedFile = null;
            return;
        }
    }

    private async Task StartProcessing()
    {
        if (selectedFile == null) return;

        processingStarted = true;
        isProcessing = true;
        errorMessage = null;

        try
        {
            // Step 1: Text Extraction
            currentStep = ProcessingStep.TextExtraction;
            StateHasChanged();
            await Task.Delay(UI_DELAY_BEFORE_STEP_MS); // Brief delay for UI feedback
            
            await ExtractTextStep();
            textExtractionComplete = true;
            StateHasChanged();
            await Task.Delay(UI_DELAY_BETWEEN_STEPS_MS); // Brief delay between steps

            // Step 2: Embedding Generation
            currentStep = ProcessingStep.EmbeddingGeneration;
            StateHasChanged();
            await Task.Delay(UI_DELAY_BEFORE_STEP_MS);
            
            await GenerateEmbeddingStep();
            embeddingGenerationComplete = true;
            StateHasChanged();
            await Task.Delay(UI_DELAY_BETWEEN_STEPS_MS);

            // Step 3: AI Analysis
            currentStep = ProcessingStep.AIAnalysis;
            StateHasChanged();
            await Task.Delay(UI_DELAY_BEFORE_STEP_MS);
            
            await AnalyzeWithAIStep();
            aiAnalysisComplete = true;
            StateHasChanged();

            // All steps complete
            processingComplete = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error during processing: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            currentStep = ProcessingStep.None;
        }
    }

    private async Task ExtractTextStep()
    {
        if (selectedFile == null) return;

        try
        {
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            extractedText = await reader.ReadToEndAsync();

            if (string.IsNullOrEmpty(extractedText))
            {
                extractedText = "[No text could be extracted from this file]";
            }
        }
        catch (Exception ex)
        {
            extractedText = $"[Error extracting text: {ex.Message}]";
        }
    }

    private async Task GenerateEmbeddingStep()
    {
        if (string.IsNullOrEmpty(extractedText)) return;

        try
        {
            embeddingVector = await AIService.GenerateEmbeddingAsync(extractedText);
            
            if (embeddingVector == null || embeddingVector.Length == 0)
            {
                // Create a dummy embedding for demo purposes if AI service fails
                embeddingVector = new float[DEFAULT_EMBEDDING_SIZE];
            }
        }
        catch (Exception ex)
        {
            // Create a dummy embedding if service fails
            embeddingVector = new float[DEFAULT_EMBEDDING_SIZE];
        }
    }

    private async Task AnalyzeWithAIStep()
    {
        if (selectedFile == null || string.IsNullOrEmpty(extractedText)) return;

        try
        {
            var result = await AIService.SuggestCategoryAsync(selectedFile.Name, extractedText);
            suggestedCategory = result.Category;
            categoryReasoning = result.Reasoning;
        }
        catch (Exception ex)
        {
            suggestedCategory = "Uncategorized";
            categoryReasoning = $"Unable to analyze: {ex.Message}";
        }
    }

    private async Task HandleSaveToDatabase()
    {
        if (selectedFile == null || !processingComplete)
        {
            errorMessage = "Please process the document before saving";
            return;
        }
        
        // Ensure user is authenticated - don't use fallback ID in production
        if (string.IsNullOrEmpty(currentUserId))
        {
            // TODO: In production, redirect to login or show proper error
            // For now, using a fallback for testing purposes
            currentUserId = "26232771-0c4c-4926-9f1b-ad5f8a4128b7";
        }

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Create upload directory if it doesn't exist
            var uploadPath = Configuration.GetValue<string>("FileStorage:UploadPath") ?? "C:\\DocumentArchive\\Uploads";
            Directory.CreateDirectory(uploadPath);

            // Save file
            var fileName = $"{Guid.NewGuid()}_{selectedFile.Name}";
            var filePath = Path.Combine(uploadPath, fileName);

            var maxFileSize = Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50) * 1024 * 1024;
            using (var stream = selectedFile.OpenReadStream(maxAllowedSize: maxFileSize))
            {
                using var fileStream = File.Create(filePath);
                await stream.CopyToAsync(fileStream);
            }

            // Create document record
            var document = new Document
            {
                FileName = selectedFile.Name,
                FilePath = filePath,
                ContentType = selectedFile.ContentType,
                FileSize = selectedFile.Size,
                ExtractedText = extractedText,
                SuggestedCategory = suggestedCategory,
                CategoryReasoning = categoryReasoning,
                ActualCategory = useCustomCategory ? customCategory : suggestedCategory,
                Visibility = (DocumentVisibility)selectedVisibility,
                EmbeddingVector = embeddingVector,
                OwnerId = string.IsNullOrEmpty(currentUserId) ? null : currentUserId,
                UploadedAt = DateTime.UtcNow
            };

            // Save to database
            await DocumentService.CreateDocumentAsync(document);
            successMessage = $"Document '{selectedFile.Name}' uploaded successfully!";
            
            // Wait a moment then redirect
            await Task.Delay(2000);
            Navigation.NavigateTo("/documents");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading document: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

