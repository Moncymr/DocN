@code {
    private class UploadModel
    {
        public string? Category { get; set; }
        public int Visibility { get; set; }
    }

    private UploadModel uploadModel = new();
    private IBrowserFile? selectedFile;
    private bool isUploading = false;
    private bool isAnalyzing = false;
    private bool useCustomCategory = false;
    private string? customCategory;
    private string? suggestedCategory;
    private string? categoryReasoning;
    private int selectedVisibility = 0;
    private string? errorMessage;
    private string? successMessage;
    private string currentUserId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        
        // Only set currentUserId if user is authenticated, otherwise leave it empty
        currentUserId = userId ?? string.Empty;
    }

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = null;
        successMessage = null;
        suggestedCategory = null;
        categoryReasoning = null;

        // Validate file size
        var maxSize = Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50) * 1024 * 1024;
        if (selectedFile.Size > maxSize)
        {
            errorMessage = $"File size exceeds maximum allowed size of {Configuration.GetValue<int>("FileStorage:MaxFileSizeMB", 50)}MB";
            selectedFile = null;
            return;
        }

        // Validate file extension
        var allowedExtensions = Configuration.GetSection("FileStorage:AllowedExtensions").Get<string[]>() ?? new[] { ".pdf", ".docx", ".txt" };
        var extension = Path.GetExtension(selectedFile.Name).ToLowerInvariant();
        if (!allowedExtensions.Contains(extension))
        {
            errorMessage = $"File type '{extension}' is not allowed. Allowed types: {string.Join(", ", allowedExtensions)}";
            selectedFile = null;
            return;
        }

        // Analyze document with AI
        await AnalyzeDocument();
    }

    private async Task AnalyzeDocument()
    {
        if (selectedFile == null) return;

        isAnalyzing = true;
        try
        {
            // Extract text from file (simplified - in production use proper text extraction libraries)
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            var extractedText = await reader.ReadToEndAsync();

            // Get AI category suggestion using MultiProviderAIService
            var result = await AIService.SuggestCategoryAsync(selectedFile.Name, extractedText);
            suggestedCategory = result.Category;
            categoryReasoning = result.Reasoning;
        }
        catch (Exception ex)
        {
            suggestedCategory = "Uncategorized";
            categoryReasoning = $"Unable to analyze: {ex.Message}";
        }
        finally
        {
            isAnalyzing = false;
        }
    }

    private async Task HandleUpload()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file to upload";
            return;
        }
        if (string.IsNullOrEmpty(currentUserId))
        {
            currentUserId = "26232771-0c4c-4926-9f1b-ad5f8a4128b7";
            //errorMessage = "You must be logged in to upload documents.";
            //return;
        }

        isUploading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Create upload directory if it doesn't exist
            var uploadPath = Configuration.GetValue<string>("FileStorage:UploadPath") ?? "C:\\DocumentArchive\\Uploads";
            Directory.CreateDirectory(uploadPath);

            // Save file
            var fileName = $"{Guid.NewGuid()}_{selectedFile.Name}";
            var filePath = Path.Combine(uploadPath, fileName);

            using (var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024))
            {
                using var fileStream = File.Create(filePath);
                await stream.CopyToAsync(fileStream);
            }

            // Extract text for embedding (simplified)
            string extractedText = "";
            try
            {
                using var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
                using var reader = new StreamReader(stream);
                extractedText = await reader.ReadToEndAsync();
            }
            catch { }

            // Generate embedding using MultiProviderAIService
            float[]? embedding = null;
            try
            {
                embedding = await AIService.GenerateEmbeddingAsync(extractedText);
            }
            catch { }

            // Create document record
            var document = new Document
            {
                FileName = selectedFile.Name,
                FilePath = filePath,
                ContentType = selectedFile.ContentType,
                FileSize = selectedFile.Size,
                ExtractedText = extractedText,
                SuggestedCategory = suggestedCategory,
                CategoryReasoning = categoryReasoning,
                ActualCategory = useCustomCategory ? customCategory : suggestedCategory,
                Visibility = (DocumentVisibility)selectedVisibility,
                EmbeddingVector = embedding,
                OwnerId = string.IsNullOrEmpty(currentUserId) ? null : currentUserId,
                UploadedAt = DateTime.UtcNow
            };

            // Save to database
            await DocumentService.CreateDocumentAsync(document);
            successMessage = $"Document '{selectedFile.Name}' uploaded successfully!";
            
            // Wait a moment then redirect
            await Task.Delay(2000);
            Navigation.NavigateTo("/documents");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading document: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/documents");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/documents");
    }

    private string GetAcceptedExtensions()
    {
        var extensions = Configuration.GetSection("FileStorage:AllowedExtensions").Get<string[]>() 
            ?? new[] { ".pdf", ".docx", ".xlsx", ".txt", ".xml", ".html", ".json", ".csv", ".png", ".jpg" };
        return string.Join(",", extensions);
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
