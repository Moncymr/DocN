                            stream.Position = 0;
                            using var reader = new StreamReader(stream);
                            extractedText = await reader.ReadToEndAsync();
                        }
                        else
                        {
                            // If stream is not seekable, reopen it
                            using var fallbackStream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
                            using var fallbackReader = new StreamReader(fallbackStream);
                            extractedText = await fallbackReader.ReadToEndAsync();
