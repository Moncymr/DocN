        }
    }

    .btn-large {
        padding: 1.5rem 3rem;
        font-size: 1.4rem;
        box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
        border: 2px solid rgba(255, 255, 255, 0.3);
        min-width: 300px;
        animation: button-pulse 2s ease-in-out infinite;
    }

    @@keyframes button-pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
