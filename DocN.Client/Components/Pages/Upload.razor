            ?? new[] { ".pdf", ".docx", ".xlsx", ".txt", ".xml", ".html", ".json", ".csv", ".png", ".jpg" };
        return string.Join(",", extensions);
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetStepClass(ProcessingStep step)
    {
        if (step == currentStep && isProcessing)
            return "active";
        
        return step switch
        {
            ProcessingStep.TextExtraction => textExtractionComplete ? "complete" : "",
            ProcessingStep.EmbeddingGeneration => embeddingGenerationComplete ? "complete" : "",
            ProcessingStep.AIAnalysis => aiAnalysisComplete ? "complete" : "",
            _ => ""
        };
    }

    private string GetTextPreview(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text))
            return "[No text available]";
        
        if (text.Length <= maxLength)
            return text;
        
        return text.Substring(0, maxLength) + "...";
    }
