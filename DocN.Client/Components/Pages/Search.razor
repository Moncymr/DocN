                                <div class="result-meta">
                                    <span>üìä @FormatFileSize(result.Document.FileSize)</span>
                                    <span>üìÖ @result.Document.UploadedAt.ToString("MMM dd, yyyy")</span>
                                    <span>üëÅÔ∏è @result.Document.AccessCount views</span>
                                </div>
                            </div>
