@page "/dashboard"
@inject IDocumentStatisticsService StatisticsService
@inject IDocumentService DocumentService
@inject IEmbeddingService EmbeddingService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Dashboard> Logger
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Dashboard - DocN</PageTitle>

<div class="dashboard-container">
    <h2>üìä Dashboard Documenti</h2>

    @if (isLoading)
    {
        <div class="loading">Caricamento statistiche...</div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            <strong>‚ö†Ô∏è Errore</strong>
            <p>@errorMessage</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(infoMessage))
    {
        <div class="alert alert-info">
            <strong>‚ÑπÔ∏è Informazione</strong>
            <p>@infoMessage</p>
        </div>
    }
    else if (stats != null && stats.TotalDocuments > 0)
    {
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üìÑ</div>
                <div class="stat-info">
                    <h3>@stats.TotalDocuments</h3>
                    <p>Documenti Totali</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üíæ</div>
                <div class="stat-info">
                    <h3>@FormatBytes(stats.TotalStorageBytes)</h3>
                    <p>Spazio Totale</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üìÖ</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedToday</h3>
                    <p>Caricati Oggi</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üìà</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedThisWeek</h3>
                    <p>Questa Settimana</p>
                </div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-card">
                <h3>Documenti per Categoria</h3>
                @if (stats.DocumentsByCategory.Any())
                {
                    <div class="category-list">
                        @foreach (var category in stats.DocumentsByCategory.OrderByDescending(x => x.Value))
                        {
                            <div class="category-item">
                                <span class="category-name">@category.Key</span>
                                <div class="category-bar">
                                    <div class="category-fill" style="width: @(GetPercentage(category.Value, stats.TotalDocuments))%"></div>
                                </div>
                                <span class="category-count">@category.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">Nessuna categoria ancora</p>
                }
            </div>

            <div class="chart-card">
                <h3>Documenti per Tipo</h3>
                @if (stats.DocumentsByType.Any())
                {
                    <div class="type-list">
                        @foreach (var type in stats.DocumentsByType.OrderByDescending(x => x.Value))
                        {
                            <div class="type-item">
                                <span class="type-icon">@GetFileIcon(type.Key)</span>
                                <span class="type-name">@type.Key</span>
                                <span class="type-count">@type.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">Nessun documento ancora</p>
                }
            </div>
        </div>

        @if (stats.MostAccessedDocuments.Any())
        {
            <div class="section">
                <h3>üî• Documenti Pi√π Consultati</h3>
                <div class="table-container">
                    <table class="documents-table">
                        <thead>
                            <tr>
                                <th>Documento</th>
                                <th>Visualizzazioni</th>
                                <th>Ultimo Accesso</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in stats.MostAccessedDocuments)
                            {
                                <tr class="document-row" @onclick="() => ViewDocumentDetails(doc)">
                                    <td>
                                        <div class="doc-cell">
                                            <span class="doc-icon">@GetFileIcon(doc.FileName)</span>
                                            <span>@doc.FileName</span>
                                        </div>
                                    </td>
                                    <td>@doc.AccessCount</td>
                                    <td>@doc.LastAccessedAt.ToString("dd MMM yyyy HH:mm")</td>
                                    <td>
                                        <button class="btn-details" @onclick:stopPropagation="true" @onclick="() => ViewDocumentDetails(doc)">
                                            üëÅÔ∏è Dettagli
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (stats.OptimizationSuggestions.Any())
        {
            <div class="section">
                <h3>üí° Suggerimenti di Ottimizzazione</h3>
                <div class="suggestions-list">
                    @foreach (var suggestion in stats.OptimizationSuggestions)
                    {
                        <div class="suggestion-card">
                            <div class="suggestion-header">
                                <strong>@suggestion.Category</strong>
                                <span class="doc-count">@suggestion.DocumentCount documenti</span>
                            </div>
                            <div class="suggestion-body">
                                <p class="suggestion-text">üí° @suggestion.Suggestion</p>
                                <p class="suggestion-reason">@suggestion.Reason</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <strong>‚ÑπÔ∏è Benvenuto</strong>
            <p>Inizia caricando alcuni documenti per visualizzare le statistiche del dashboard.</p>
        </div>
    }
    
    <!-- Document Details Panel (Slide-in) -->
    @if (showDetailsPanel && selectedDocument != null)
    {
        <div class="details-overlay" @onclick="CloseDetailsPanel"></div>
        <div class="details-panel @(showDetailsPanel ? "open" : "")">
            <div class="panel-header">
                <h3>üìÑ Dettagli Documento</h3>
                <button class="btn-close" @onclick="CloseDetailsPanel">‚úï</button>
            </div>
            
            <div class="panel-body">
                <div class="detail-section">
                    <div class="doc-icon-xl">@GetFileIcon(selectedDocument.FileName)</div>
                    <h4 class="detail-title">@selectedDocument.FileName</h4>
                </div>
                
                <div class="detail-section">
                    <h5>üìã Informazioni</h5>
                    <dl class="detail-list">
                        <dt>Categoria:</dt>
                        <dd>@(selectedDocument.ActualCategory ?? "Senza Categoria")</dd>
                        
                        <dt>Visualizzazioni:</dt>
                        <dd>@selectedDocument.AccessCount volte</dd>
                        
                        @if (selectedDocument.LastAccessedAt.HasValue)
                        {
                            <dt>Ultimo Accesso:</dt>
                            <dd>@selectedDocument.LastAccessedAt.Value.ToString("dd MMMM yyyy HH:mm")</dd>
                        }
                        
                        <dt>Caricato il:</dt>
                        <dd>@selectedDocument.UploadedAt.ToString("dd MMMM yyyy 'alle' HH:mm")</dd>
                    </dl>
                </div>
                
                @if (!string.IsNullOrEmpty(selectedDocument.CategoryReasoning))
                {
                    <div class="detail-section">
                        <h5>üí° Motivazione Classificazione AI</h5>
                        <p class="reasoning-text">@selectedDocument.CategoryReasoning</p>
                    </div>
                }
                
                @* Similar Documents *@
                @if (selectedDocument.EmbeddingVector != null && selectedDocument.EmbeddingVector.Length > 0)
                {
                    @if (similarDocumentsForSelected != null && similarDocumentsForSelected.Any())
                    {
                        <div class="detail-section">
                            <h5>üîç Documenti Simili</h5>
                            <div class="similar-docs-list">
                                @foreach (var doc in similarDocumentsForSelected)
                                {
                                    <div class="similar-doc-card" @onclick="() => ViewDocumentDetails(doc)">
                                        <div class="similar-doc-icon">@GetFileIcon(doc.FileName)</div>
                                        <div class="similar-doc-details">
                                            <h6>@doc.FileName</h6>
                                            <p class="doc-date-small">@doc.UploadedAt.ToString("dd MMM yyyy")</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                
                <div class="detail-actions">
                    <button class="btn-action btn-view" @onclick="() => NavigateToDocuments()">
                        üìÑ Vai ai Documenti
                    </button>
                </div>
            </div>
        </div>
    }
</div>

