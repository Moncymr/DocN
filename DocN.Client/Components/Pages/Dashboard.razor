@page "/dashboard"
@inject IDocumentStatisticsService StatisticsService
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>Dashboard - DocN</PageTitle>

<div class="dashboard-container">
    <h2>ðŸ“Š Document Dashboard</h2>

    @if (isLoading)
    {
        <div class="loading">Loading statistics...</div>
    }
    else if (stats != null)
    {
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">ðŸ“„</div>
                <div class="stat-info">
                    <h3>@stats.TotalDocuments</h3>
                    <p>Total Documents</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">ðŸ’¾</div>
                <div class="stat-info">
                    <h3>@FormatBytes(stats.TotalStorageBytes)</h3>
                    <p>Total Storage</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">ðŸ“…</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedToday</h3>
                    <p>Uploaded Today</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">ðŸ“ˆ</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedThisWeek</h3>
                    <p>This Week</p>
                </div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-card">
                <h3>Documents by Category</h3>
                @if (stats.DocumentsByCategory.Any())
                {
                    <div class="category-list">
                        @foreach (var category in stats.DocumentsByCategory.OrderByDescending(x => x.Value))
                        {
                            <div class="category-item">
                                <span class="category-name">@category.Key</span>
                                <div class="category-bar">
                                    <div class="category-fill" style="width: @(GetPercentage(category.Value, stats.TotalDocuments))%"></div>
                                </div>
                                <span class="category-count">@category.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">No categories yet</p>
                }
            </div>

            <div class="chart-card">
                <h3>Documents by Type</h3>
                @if (stats.DocumentsByType.Any())
                {
                    <div class="type-list">
                        @foreach (var type in stats.DocumentsByType.OrderByDescending(x => x.Value))
                        {
                            <div class="type-item">
                                <span class="type-icon">@GetFileIcon(type.Key)</span>
                                <span class="type-name">@type.Key</span>
                                <span class="type-count">@type.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">No documents yet</p>
                }
            </div>
        </div>

        @if (stats.MostAccessedDocuments.Any())
        {
            <div class="section">
                <h3>ðŸ”¥ Most Accessed Documents</h3>
                <div class="table-container">
                    <table class="documents-table">
                        <thead>
                            <tr>
                                <th>Document</th>
                                <th>Access Count</th>
                                <th>Last Accessed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in stats.MostAccessedDocuments)
                            {
                                <tr>
                                    <td>@doc.FileName</td>
                                    <td>@doc.AccessCount</td>
                                    <td>@doc.LastAccessedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (stats.OptimizationSuggestions.Any())
        {
            <div class="section">
                <h3>ðŸ’¡ Optimization Suggestions</h3>
                <div class="suggestions-list">
                    @foreach (var suggestion in stats.OptimizationSuggestions)
                    {
                        <div class="suggestion-card">
                            <div class="suggestion-header">
                                <strong>@suggestion.Category</strong>
                                <span class="doc-count">@suggestion.DocumentCount documents</span>
                            </div>
                            <div class="suggestion-body">
                                <p class="suggestion-text">ðŸ’¡ @suggestion.Suggestion</p>
                                <p class="suggestion-reason">@suggestion.Reason</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

