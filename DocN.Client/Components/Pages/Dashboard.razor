@code {
    private DocumentStatistics? stats;
    private bool isLoading = true;
    private string currentUserId = string.Empty;
    private string errorMessage = string.Empty;
    private string infoMessage = string.Empty;
    
    // Details panel
    private bool showDetailsPanel = false;
    private Document? selectedDocument = null;
    private List<Document>? similarDocumentsForSelected;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
        
        await LoadStatistics();
    }

    private async Task LoadStatistics()
    {
        isLoading = true;
        errorMessage = string.Empty;
        infoMessage = string.Empty;
        
        try
        {
            stats = await StatisticsService.GetStatisticsAsync(currentUserId);
            
            // Check if we got valid stats but no documents
            if (stats != null && stats.TotalDocuments == 0)
            {
                infoMessage = "Nessun documento trovato. Carica alcuni documenti per vedere le statistiche.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Si √® verificato un errore durante il caricamento delle statistiche. Riprova pi√π tardi o contatta l'amministratore.";
            Logger.LogError(ex, "Error loading dashboard statistics for user {UserId}", currentUserId);
        }
        finally
        {
            isLoading = false;
        }
    }

    private double GetPercentage(int count, int total)
    {
        return total > 0 ? (count * 100.0) / total : 0;
    }

    private string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetFileIcon(string contentType)
    {
        return contentType.ToLower() switch
        {
            var t when t.Contains("pdf") => "üìë",
            var t when t.Contains("word") || t.Contains("document") => "üìù",
            var t when t.Contains("excel") || t.Contains("spreadsheet") => "üìä",
            var t when t.Contains("image") => "üñºÔ∏è",
            var t when t.Contains("text") => "üìÑ",
            _ => "üìé"
        };
    }
    
    private async Task ViewDocumentDetails(TopDocument topDoc)
    {
        try
        {
            // Fetch the full document
            var doc = await DocumentService.GetDocumentAsync(topDoc.Id, currentUserId);
            if (doc != null)
            {
                await ViewDocumentDetails(doc);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading document {DocumentId}", topDoc.Id);
        }
    }
    
    private async Task ViewDocumentDetails(Document doc)
    {
        selectedDocument = doc;
        showDetailsPanel = true;
        
        // Load similar documents if the document has embeddings
        if (doc.EmbeddingVector != null && doc.EmbeddingVector.Length > 0)
        {
            try
            {
                var allSimilar = await EmbeddingService.SearchSimilarDocumentsAsync(doc.EmbeddingVector, topK: 6);
                // Exclude the current document from similar results
                similarDocumentsForSelected = allSimilar.Where(d => d.Id != doc.Id).Take(5).ToList();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error loading similar documents for document {DocumentId}", doc.Id);
                similarDocumentsForSelected = new List<Document>();
            }
        }
        
        StateHasChanged();
    }
    
    private void CloseDetailsPanel()
    {
        showDetailsPanel = false;
        selectedDocument = null;
        similarDocumentsForSelected = null;
    }
    
    private void NavigateToDocuments()
    {
        Navigation.NavigateTo("/documents");
    }
}
