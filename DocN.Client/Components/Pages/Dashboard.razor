@page "/dashboard"
@inject IDocumentStatisticsService StatisticsService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Dashboard> Logger
@rendermode InteractiveServer

<PageTitle>Dashboard - DocN</PageTitle>

<div class="dashboard-container">
    <h2>üìä Dashboard Documenti</h2>

    @if (isLoading)
    {
        <div class="loading">Caricamento statistiche...</div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            <strong>‚ö†Ô∏è Errore</strong>
            <p>@errorMessage</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(infoMessage))
    {
        <div class="alert alert-info">
            <strong>‚ÑπÔ∏è Informazione</strong>
            <p>@infoMessage</p>
        </div>
    }
    else if (stats != null && stats.TotalDocuments > 0)
    {
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üìÑ</div>
                <div class="stat-info">
                    <h3>@stats.TotalDocuments</h3>
                    <p>Documenti Totali</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üíæ</div>
                <div class="stat-info">
                    <h3>@FormatBytes(stats.TotalStorageBytes)</h3>
                    <p>Spazio Totale</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üìÖ</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedToday</h3>
                    <p>Caricati Oggi</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üìà</div>
                <div class="stat-info">
                    <h3>@stats.DocumentsUploadedThisWeek</h3>
                    <p>Questa Settimana</p>
                </div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-card">
                <h3>Documenti per Categoria</h3>
                @if (stats.DocumentsByCategory.Any())
                {
                    <div class="category-list">
                        @foreach (var category in stats.DocumentsByCategory.OrderByDescending(x => x.Value))
                        {
                            <div class="category-item">
                                <span class="category-name">@category.Key</span>
                                <div class="category-bar">
                                    <div class="category-fill" style="width: @(GetPercentage(category.Value, stats.TotalDocuments))%"></div>
                                </div>
                                <span class="category-count">@category.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">Nessuna categoria ancora</p>
                }
            </div>

            <div class="chart-card">
                <h3>Documenti per Tipo</h3>
                @if (stats.DocumentsByType.Any())
                {
                    <div class="type-list">
                        @foreach (var type in stats.DocumentsByType.OrderByDescending(x => x.Value))
                        {
                            <div class="type-item">
                                <span class="type-icon">@GetFileIcon(type.Key)</span>
                                <span class="type-name">@type.Key</span>
                                <span class="type-count">@type.Value</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-message">Nessun documento ancora</p>
                }
            </div>
        </div>

        @if (stats.MostAccessedDocuments.Any())
        {
            <div class="section">
                <h3>üî• Documenti Pi√π Consultati</h3>
                <div class="table-container">
                    <table class="documents-table">
                        <thead>
                            <tr>
                                <th>Documento</th>
                                <th>Visualizzazioni</th>
                                <th>Ultimo Accesso</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in stats.MostAccessedDocuments)
                            {
                                <tr>
                                    <td>@doc.FileName</td>
                                    <td>@doc.AccessCount</td>
                                    <td>@doc.LastAccessedAt.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (stats.OptimizationSuggestions.Any())
        {
            <div class="section">
                <h3>üí° Suggerimenti di Ottimizzazione</h3>
                <div class="suggestions-list">
                    @foreach (var suggestion in stats.OptimizationSuggestions)
                    {
                        <div class="suggestion-card">
                            <div class="suggestion-header">
                                <strong>@suggestion.Category</strong>
                                <span class="doc-count">@suggestion.DocumentCount documenti</span>
                            </div>
                            <div class="suggestion-body">
                                <p class="suggestion-text">üí° @suggestion.Suggestion</p>
                                <p class="suggestion-reason">@suggestion.Reason</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <strong>‚ÑπÔ∏è Benvenuto</strong>
            <p>Inizia caricando alcuni documenti per visualizzare le statistiche del dashboard.</p>
        </div>
    }
</div>

