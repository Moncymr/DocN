@page "/diagnostica"
@using DocN.Data
@using DocN.Data.Models
@using System.Net.Http.Json
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Diagnostica Configurazione - DocN</PageTitle>

<div class="diagnostica-container">
    <div class="diagnostica-header">
        <h2>üîß Diagnostica Configurazione AI</h2>
        <p class="description">Visualizza e gestisci le configurazioni AI del sistema</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Caricamento diagnostica...</p>
        </div>
    }
    else if (diagnosticResult != null)
    {
        <!-- Summary Card -->
        <div class="summary-card">
            <div class="summary-item">
                <span class="summary-icon">üìä</span>
                <div>
                    <div class="summary-label">Totale Configurazioni</div>
                    <div class="summary-value">@diagnosticResult.TotalConfigurations</div>
                </div>
            </div>
            <div class="summary-item">
                <span class="summary-icon">‚úÖ</span>
                <div>
                    <div class="summary-label">Configurazione Attiva</div>
                    <div class="summary-value">@(diagnosticResult.ActiveConfiguration?.ConfigurationName ?? "Nessuna")</div>
                </div>
            </div>
            <div class="summary-item">
                <span class="summary-icon">‚è∞</span>
                <div>
                    <div class="summary-label">Ultimo Aggiornamento</div>
                    <div class="summary-value">@diagnosticResult.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <button class="btn btn-primary" @onclick="RefreshDiagnostics" disabled="@isLoading">
                üîÑ Aggiorna Diagnostica
            </button>
            <button class="btn btn-warning" @onclick="ResetConfiguration" disabled="@isResetting">
                @if (isResetting)
                {
                    <span>‚è≥ Reset in corso...</span>
                }
                else
                {
                    <span>üîÑ Reset a Default</span>
                }
            </button>
            <button class="btn btn-secondary" @onclick="GoToConfig">
                ‚öôÔ∏è Modifica Configurazione
            </button>
        </div>

        @if (!string.IsNullOrEmpty(actionMessage))
        {
            <div class="alert @(actionError ? "alert-error" : "alert-success")">
                @actionMessage
            </div>
        }

        <!-- Configurations List -->
        <div class="configurations-section">
            <h3>üìã Configurazioni Disponibili</h3>
            
            @if (diagnosticResult.Configurations.Any())
            {
                <div class="configurations-grid">
                    @foreach (var config in diagnosticResult.Configurations)
                    {
                        <div class="config-card @(config.IsActive ? "active" : "")">
                            <div class="config-header">
                                <h4>@config.Name</h4>
                                @if (config.IsActive)
                                {
                                    <span class="badge badge-active">Attiva</span>
                                }
                                else
                                {
                                    <button class="btn-small btn-activate" @onclick="() => SetAsDefault(config.Id)">
                                        Imposta come Default
                                    </button>
                                }
                            </div>

                            <div class="config-details">
                                <div class="detail-row">
                                    <span class="detail-label">ID:</span>
                                    <span class="detail-value">@config.Id</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Creata:</span>
                                    <span class="detail-value">@config.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                @if (config.UpdatedAt.HasValue)
                                {
                                    <div class="detail-row">
                                        <span class="detail-label">Aggiornata:</span>
                                        <span class="detail-value">@config.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                }
                            </div>

                            <div class="providers-section">
                                <h5>Provider Configurati:</h5>
                                @if (config.ProvidersConfigured.Any())
                                {
                                    <div class="providers-list">
                                        @foreach (var provider in config.ProvidersConfigured)
                                        {
                                            <span class="provider-badge">@provider</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="no-providers">‚ö†Ô∏è Nessun provider configurato</p>
                                }
                            </div>

                            <div class="services-section">
                                <h5>Assegnazione Servizi:</h5>
                                <div class="services-grid">
                                    <div class="service-item">
                                        <span class="service-icon">üí¨</span>
                                        <span class="service-name">Chat:</span>
                                        <span class="service-value">@config.ChatProvider</span>
                                    </div>
                                    <div class="service-item">
                                        <span class="service-icon">üß†</span>
                                        <span class="service-name">Embeddings:</span>
                                        <span class="service-value">@config.EmbeddingsProvider</span>
                                    </div>
                                    <div class="service-item">
                                        <span class="service-icon">üè∑Ô∏è</span>
                                        <span class="service-name">Tag Extract:</span>
                                        <span class="service-value">@config.TagExtractionProvider</span>
                                    </div>
                                    <div class="service-item">
                                        <span class="service-icon">üîç</span>
                                        <span class="service-name">RAG:</span>
                                        <span class="service-value">@config.RAGProvider</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-configs">
                    <p>‚ö†Ô∏è Nessuna configurazione trovata</p>
                    <button class="btn btn-primary" @onclick="ResetConfiguration">
                        Crea Configurazione Default
                    </button>
                </div>
            }
        </div>

        <!-- API Info -->
        <div class="api-info">
            <h3>üì° Endpoint API Utilizzato</h3>
            <div class="endpoint-card">
                <code>GET /api/config/diagnostica</code>
                <p>Questo endpoint fornisce informazioni diagnostiche dettagliate sulle configurazioni AI disponibili nel sistema.</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-container">
            <div class="error-icon">‚ùå</div>
            <h3>Errore durante il caricamento della diagnostica</h3>
            <p>@errorMessage</p>
            <button class="btn btn-primary" @onclick="RefreshDiagnostics">
                üîÑ Riprova
            </button>
        </div>
    }
</div>

