@code {
    private DiagnosticResult? diagnosticResult = null;
    private string errorMessage = string.Empty;
    private string actionMessage = string.Empty;
    private bool actionError = false;
    private bool isLoading = true;
    private bool isResetting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDiagnostics();
    }

    private async Task LoadDiagnostics()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            var response = await httpClient.GetAsync("api/config/diagnostica");

            if (response.IsSuccessStatusCode)
            {
                diagnosticResult = await response.Content.ReadFromJsonAsync<DiagnosticResult>();
            }
            else
            {
                errorMessage = $"Errore nel caricamento della diagnostica: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore durante il caricamento: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshDiagnostics()
    {
        actionMessage = string.Empty;
        await LoadDiagnostics();
    }

    private async Task ResetConfiguration()
    {
        try
        {
            isResetting = true;
            actionMessage = string.Empty;
            StateHasChanged();

            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            var response = await httpClient.PostAsync("api/config/reset", null);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ResetResult>();
                actionMessage = result?.Message ?? "‚úÖ Reset completato";
                actionError = false;
                
                // Refresh diagnostics after reset
                await LoadDiagnostics();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                actionMessage = $"‚ùå Errore durante il reset: {errorContent}";
                actionError = true;
            }
        }
        catch (Exception ex)
        {
            actionMessage = $"‚ùå Errore: {ex.Message}";
            actionError = true;
        }
        finally
        {
            isResetting = false;
            StateHasChanged();
        }
    }

    private async Task SetAsDefault(int configId)
    {
        try
        {
            actionMessage = string.Empty;
            StateHasChanged();

            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            var response = await httpClient.PostAsync($"api/config/set-default/{configId}", null);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<SetDefaultResult>();
                actionMessage = result?.Message ?? "‚úÖ Configurazione impostata come default";
                actionError = false;
                
                // Refresh diagnostics after setting default
                await LoadDiagnostics();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                actionMessage = $"‚ùå Errore: {errorContent}";
                actionError = true;
            }
        }
        catch (Exception ex)
        {
            actionMessage = $"‚ùå Errore: {ex.Message}";
            actionError = true;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private void GoToConfig()
    {
        Navigation.NavigateTo("/config");
    }
}
