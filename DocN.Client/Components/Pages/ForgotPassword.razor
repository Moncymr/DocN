@page "/forgot-password"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Identity
@using DocN.Data.Models
@using System.ComponentModel.DataAnnotations
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>Forgot Password - DocN</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">üîë</div>
            <h1 class="auth-title">Reset Password</h1>
            <p class="auth-subtitle">Enter your email to receive reset instructions</p>
        </div>

        @if (!emailSent)
        {
            <EditForm Model="@forgotPasswordModel" OnValidSubmit="HandleForgotPassword" FormName="forgotPasswordForm">
                <DataAnnotationsValidator />
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <span class="alert-icon">‚ö†Ô∏è</span>
                        <span>@errorMessage</span>
                    </div>
                }

                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <InputText id="email" @bind-Value="forgotPasswordModel.Email" class="form-input" placeholder="your@email.com" autocomplete="email" />
                    <ValidationMessage For="@(() => forgotPasswordModel.Email)" class="validation-message" />
                </div>

                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner"></span>
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Send Reset Link</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <div class="success-message">
                <div class="success-icon">üìß</div>
                <h2 class="success-title">Check Your Email</h2>
                <p class="success-text">
                    If an account exists with <strong>@forgotPasswordModel.Email</strong>, 
                    you will receive a password reset link shortly.
                </p>
                <p class="success-hint">
                    Didn't receive the email? Check your spam folder or 
                    <a href="#" @onclick="ResetForm" @onclick:preventDefault class="success-link">try again</a>.
                </p>
            </div>
        }

        <div class="auth-footer">
            <a href="/login" class="auth-link">‚Üê Back to Login</a>
        </div>
    </div>
</div>

