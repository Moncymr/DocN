@code {
    [SupplyParameterFromForm]
    private ForgotPasswordModel forgotPasswordModel { get; set; } = default!;
    
    private string? errorMessage;
    private bool isLoading = false;
    private bool emailSent = false;

    protected override void OnInitialized()
    {
        forgotPasswordModel ??= new();
    }

    private async Task HandleForgotPassword()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var user = await UserManager.FindByEmailAsync(forgotPasswordModel.Email);
            
            // Always show success to prevent email enumeration
            // In production, you would send an actual email here
            emailSent = true;
            
            if (user != null)
            {
                // Generate password reset token
                var token = await UserManager.GeneratePasswordResetTokenAsync(user);
                
                // TODO: In production, send email with reset link
                // var resetLink = $"{Navigation.BaseUri}reset-password?email={Uri.EscapeDataString(user.Email)}&token={Uri.EscapeDataString(token)}";
                // await EmailService.SendPasswordResetEmail(user.Email, resetLink);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Forgot password error: {ex.Message}");
            // Still show success to prevent information disclosure
            emailSent = true;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ResetForm()
    {
        emailSent = false;
        forgotPasswordModel = new();
        errorMessage = null;
    }

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }
}
