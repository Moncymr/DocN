@code {
    private List<DocumentConnector> connectors = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string? errorMessage;
    private DocumentConnector currentConnector = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadConnectors();
    }

    private async Task LoadConnectors()
    {
        try
        {
            isLoading = true;
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            connectors = await httpClient.GetFromJsonAsync<List<DocumentConnector>>("Connectors") ?? new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading connectors: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        currentConnector = new DocumentConnector { IsActive = true };
        isEditMode = false;
        errorMessage = null;
        showModal = true;
    }

    private void EditConnector(DocumentConnector connector)
    {
        currentConnector = new DocumentConnector
        {
            Id = connector.Id,
            Name = connector.Name,
            ConnectorType = connector.ConnectorType,
            Configuration = connector.Configuration,
            Description = connector.Description,
            IsActive = connector.IsActive
        };
        isEditMode = true;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        errorMessage = null;
    }

    private async Task SaveConnector()
    {
        try
        {
            errorMessage = null;
            isSaving = true;
            
            // Validate required fields
            if (string.IsNullOrWhiteSpace(currentConnector.Name))
            {
                errorMessage = "Name is required";
                return;
            }
            if (string.IsNullOrWhiteSpace(currentConnector.ConnectorType))
            {
                errorMessage = "Connector Type is required";
                return;
            }
            if (string.IsNullOrWhiteSpace(currentConnector.Configuration))
            {
                errorMessage = "Configuration is required";
                return;
            }
            
            await JSRuntime.InvokeVoidAsync("console.log", $"Saving connector: {currentConnector.Name}, Type: {currentConnector.ConnectorType}");
            
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            HttpResponseMessage response;

            if (isEditMode)
            {
                await JSRuntime.InvokeVoidAsync("console.log", $"Updating connector ID: {currentConnector.Id}");
                response = await httpClient.PutAsJsonAsync($"Connectors/{currentConnector.Id}", currentConnector);
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("console.log", "Creating new connector");
                response = await httpClient.PostAsJsonAsync("Connectors", currentConnector);
            }

            await JSRuntime.InvokeVoidAsync("console.log", $"Response status: {response.StatusCode}");
            
            if (response.IsSuccessStatusCode)
            {
                await JSRuntime.InvokeVoidAsync("console.log", "Connector saved successfully!");
                await LoadConnectors();
                CloseModal();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                await JSRuntime.InvokeVoidAsync("console.error", $"Error response: {errorContent}");
                errorMessage = $"Error saving connector: {response.StatusCode} - {errorContent}";
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Exception: {ex}");
            errorMessage = $"Error saving connector: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task TestConnection(DocumentConnector connector)
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");
            var response = await httpClient.PostAsync($"Connectors/{connector.Id}/test", null);
            if (response.IsSuccessStatusCode)
            {
                await LoadConnectors();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error testing connection: {ex.Message}";
        }
    }

    private async Task DeleteConnector(DocumentConnector connector)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{connector.Name}'?"))
        {
            try
            {
                var httpClient = HttpClientFactory.CreateClient("BackendAPI");
                await httpClient.DeleteAsync($"Connectors/{connector.Id}");
                await LoadConnectors();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting connector: {ex.Message}";
            }
        }
    }

    private string GetConnectorIcon(string connectorType)
    {
        return connectorType switch
        {
            ConnectorTypes.SharePoint => "üìä",
            ConnectorTypes.OneDrive => "‚òÅÔ∏è",
            ConnectorTypes.GoogleDrive => "üìÅ",
            ConnectorTypes.LocalFolder => "üíæ",
            _ => "üîå"
        };
    }
