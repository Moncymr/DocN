@page "/connectors"
@using System.Net.Http.Json
@using DocN.Data.Models
@using DocN.Data.Constants
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Connectors - DocN</PageTitle>

<div class="connectors-page">
    <div class="page-header">
        <div class="header-left">
            <h1>üîå Document Connectors</h1>
            <p class="subtitle">Connect to external document repositories</p>
        </div>
        <div class="header-right">
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <span>‚ûï New Connector</span>
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-large"></div>
            <p>Loading connectors...</p>
        </div>
    }
    else if (!connectors.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">üîå</div>
            <h3>No Connectors Yet</h3>
            <p>Create your first connector to connect to external document repositories</p>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                ‚ûï Create Connector
            </button>
        </div>
    }
    else
    {
        <div class="connectors-grid">
            @foreach (var connector in connectors)
            {
                <div class="connector-card @(connector.IsActive ? "active" : "inactive")">
                    <div class="card-header">
                        <div class="connector-icon">@GetConnectorIcon(connector.ConnectorType)</div>
                        <div class="connector-status">
                            @if (connector.IsActive)
                            {
                                <span class="badge badge-success">‚úì Active</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">‚óã Inactive</span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <h3>@connector.Name</h3>
                        <p class="connector-type">@connector.ConnectorType</p>
                        @if (!string.IsNullOrEmpty(connector.Description))
                        {
                            <p class="connector-description">@connector.Description</p>
                        }
                        
                        <div class="connector-info">
                            @if (connector.LastSyncedAt.HasValue)
                            {
                                <div class="info-item">
                                    <span class="info-icon">üîÑ</span>
                                    <span>Last synced: @connector.LastSyncedAt.Value.ToLocalTime().ToString("g")</span>
                                </div>
                            }
                            @if (connector.LastConnectionTest.HasValue)
                            {
                                <div class="info-item">
                                    <span class="info-icon">üîó</span>
                                    <span>Last tested: @connector.LastConnectionTest.Value.ToLocalTime().ToString("g")</span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="card-actions">
                        <button class="btn-action" @onclick="() => TestConnection(connector)" title="Test Connection">
                            üîó Test
                        </button>
                        <button class="btn-action" @onclick="() => EditConnector(connector)" title="Edit">
                            ‚úèÔ∏è Edit
                        </button>
                        <button class="btn-action btn-danger" @onclick="() => DeleteConnector(connector)" title="Delete">
                            üóëÔ∏è Delete
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Create/Edit Modal *@
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(isEditMode ? "Edit Connector" : "New Connector")</h3>
                <button class="btn-close" @onclick="CloseModal">√ó</button>
            </div>
            
            <div class="modal-body">
                <div class="form-group">
                    <label>Name *</label>
                    <input type="text" @bind="currentConnector.Name" class="form-control" placeholder="My SharePoint Connector" />
                </div>
                
                <div class="form-group">
                    <label>Connector Type *</label>
                    <select @bind="currentConnector.ConnectorType" class="form-control">
                        <option value="">Select type...</option>
                        <option value="@ConnectorTypes.SharePoint">SharePoint</option>
                        <option value="@ConnectorTypes.OneDrive">OneDrive</option>
                        <option value="@ConnectorTypes.GoogleDrive">Google Drive</option>
                        <option value="@ConnectorTypes.LocalFolder">Local Folder</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Description</label>
                    <textarea @bind="currentConnector.Description" class="form-control" rows="3" placeholder="Description of this connector..."></textarea>
                </div>
                
                <div class="form-group">
                    <label>Configuration (JSON) *</label>
                    <textarea @bind="currentConnector.Configuration" class="form-control" rows="5" placeholder='{"siteUrl": "https://yourtenant.sharepoint.com", "folderPath": "/Shared Documents"}'></textarea>
                    <small class="form-text">Enter connection configuration as JSON</small>
                </div>
                
                <div class="form-group">
                    <label>
                        <input type="checkbox" @bind="currentConnector.IsActive" />
                        Active
                    </label>
                </div>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        @errorMessage
                    </div>
                }
            </div>
            
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveConnector" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span>‚è≥ Saving...</span>
                    }
                    else
                    {
                        <span>üíæ Save</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

