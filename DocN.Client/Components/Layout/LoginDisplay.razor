@using Microsoft.AspNetCore.Identity
@using DocN.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="user-display">
            <div class="user-info">
                <span class="user-icon">üë§</span>
                <span class="user-name">@GetUserDisplayName(context.User)</span>
            </div>
            <form action="/logout" method="post">
                <AntiforgeryToken />
                <button type="submit" class="logout-btn">
                    <span class="logout-icon">üö™</span>
                    Logout
                </button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="auth-links">
            <a href="/login" class="auth-btn login-btn">
                <span class="auth-icon">üîê</span>
                Login
            </a>
            <a href="/register" class="auth-btn register-btn">
                <span class="auth-icon">‚ú®</span>
                Register
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>

<style>
    .user-display {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        background: rgba(102, 126, 234, 0.1);
        border-radius: 8px;
    }

    .user-icon {
        font-size: 1.25rem;
    }

    .user-name {
        font-size: 0.875rem;
        font-weight: 600;
        color: #2d3748;
    }

    .logout-btn {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 0.875rem;
        background: #f56565;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .logout-btn:hover {
        background: #e53e3e;
        transform: translateY(-1px);
    }

    .logout-icon {
        font-size: 1rem;
    }

    .auth-links {
        display: flex;
        gap: 0.75rem;
        padding: 0.5rem;
    }

    .auth-btn {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 0.875rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .login-btn {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
    }

    .login-btn:hover {
        background: rgba(102, 126, 234, 0.2);
        transform: translateY(-1px);
    }

    .register-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .register-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .auth-icon {
        font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .user-display,
        .auth-links {
            flex-direction: column;
            width: 100%;
        }

        .auth-btn,
        .logout-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@code {
    private string GetUserDisplayName(System.Security.Claims.ClaimsPrincipal user)
    {
        var name = user.Identity?.Name;
        if (!string.IsNullOrEmpty(name) && name.Contains("@"))
        {
            return name.Split("@")[0];
        }
        return name ?? "User";
    }
}
