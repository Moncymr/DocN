@page "/documents"
@using DocN.Client.Models
@inject HttpClient Http

<PageTitle>Documents</PageTitle>

<h1>Documents</h1>

<p>This page displays all documents in the system, including those without vector embeddings.</p>

@if (documents == null)
{
    <p><em>Loading documents...</em></p>
}
else if (!documents.Any())
{
    <p><em>No documents found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>File Name</th>
                <th>Category</th>
                <th>Uploaded At</th>
                <th>Vector Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in documents)
            {
                <tr>
                    <td>@doc.Id</td>
                    <td>@doc.FileName</td>
                    <td>@(doc.Category ?? "N/A")</td>
                    <td>@doc.UploadedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (doc.Vector != null && doc.Vector.Length > 0)
                        {
                            <span class="badge bg-success">Vector Calculated</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">No Vector</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="alert alert-info mt-3">
        <strong>Total Documents:</strong> @documents.Count
        <br />
        <strong>Documents with Vectors:</strong> @documents.Count(d => d.Vector != null && d.Vector.Length > 0)
        <br />
        <strong>Documents without Vectors:</strong> @documents.Count(d => d.Vector == null || d.Vector.Length == 0)
    </div>
}

@code {
    private List<Document>? documents;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            documents = await Http.GetFromJsonAsync<List<Document>>("http://localhost:5210/documents");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading documents: {ex.Message}");
            documents = new List<Document>();
        }
    }
}
