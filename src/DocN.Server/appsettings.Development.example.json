{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DocNDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=docn.db"
  },
  "Database": {
    "Provider": "SqlServer",
    "Comment": "Provider: SqlServer or Sqlite. SqlServer supports VECTOR type for embeddings."
  },
  "Storage": {
    "DocumentsPath": "C:\\DocNData\\Uploads",
    "MaxFileSizeMB": 100
  },
  "SemanticKernel": {
    "DefaultEmbeddingProvider": "AzureOpenAI",
    "DefaultChatProvider": "AzureOpenAI",
    "Gemini": {
      "ApiKey": "your-gemini-api-key",
      "EmbeddingModel": "text-embedding-004",
      "ChatModel": "gemini-1.5-pro"
    },
    "OpenAI": {
      "ApiKey": "your-openai-api-key",
      "EmbeddingModel": "text-embedding-3-small",
      "ChatModel": "gpt-4-turbo"
    },
    "AzureOpenAI": {
      "Endpoint": "https://your-resource.openai.azure.com/",
      "ApiKey": "your-azure-openai-api-key",
      "EmbeddingDeployment": "text-embedding-ada-002",
      "ChatDeployment": "gpt-4"
    }
  },
  "AIProvider": {
    "DefaultProvider": "AzureOpenAI",
    "AzureOpenAI": {
      "Endpoint": "https://your-resource.openai.azure.com/",
      "ApiKey": "your-azure-openai-api-key",
      "EmbeddingDeployment": "text-embedding-ada-002",
      "ChatDeployment": "gpt-4",
      "ApiVersion": "2024-02-15-preview"
    },
    "OpenAI": {
      "ApiKey": "your-openai-api-key",
      "EmbeddingModel": "text-embedding-3-small",
      "ChatModel": "gpt-4-turbo",
      "OrganizationId": null
    },
    "Gemini": {
      "ApiKey": "your-gemini-api-key",
      "EmbeddingModel": "text-embedding-004",
      "GenerationModel": "gemini-1.5-pro",
      "ApiEndpoint": null
    }
  }
