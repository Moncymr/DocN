@page "/documents/upload"
@using MudBlazor

<PageTitle>Carica Documento - DocN</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" Class="mb-4">üì§ Carica Documento</MudText>
    
    <MudCard Elevation="2">
        <MudCardContent>
            <MudGrid>
                <!-- File Upload -->
                <MudItem xs="12">
                    <MudFileUpload T="IBrowserFile" FilesChanged="OnFilesChanged" Accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx">
                        <ActivatorContent>
                            <MudPaper Height="200px" Outlined="true" Class="d-flex align-center justify-center pa-4 cursor-pointer mud-width-full">
                                <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                    <MudIcon Icon="@Icons.Material.Filled.CloudUpload" Size="Size.Large" Color="Color.Primary" />
                                    <MudText Typo="Typo.h6">Trascina qui il file o clicca per selezionare</MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary">Formati supportati: PDF, Word, Excel, PowerPoint</MudText>
                                </MudStack>
                            </MudPaper>
                        </ActivatorContent>
                    </MudFileUpload>
                </MudItem>
                
                <!-- Selected File Info -->
                @if (selectedFile != null)
                {
                    <MudItem xs="12">
                        <MudAlert Severity="Severity.Info" Icon="@Icons.Material.Filled.Description">
                            <MudText><strong>File selezionato:</strong> @selectedFile.Name</MudText>
                            <MudText><strong>Dimensione:</strong> @FormatFileSize(selectedFile.Size)</MudText>
                        </MudAlert>
                    </MudItem>
                }
                
                <!-- Category Selection -->
                <MudItem xs="12" md="6">
                    <MudSelect T="string" Label="Categoria" @bind-Value="selectedCategory" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Contratti")">üìú Contratti</MudSelectItem>
                        <MudSelectItem Value="@("Fatture")">üßæ Fatture</MudSelectItem>
                        <MudSelectItem Value="@("Report")">üìä Report</MudSelectItem>
                        <MudSelectItem Value="@("Manuali")">üìö Manuali</MudSelectItem>
                        <MudSelectItem Value="@("Policy")">üìã Policy</MudSelectItem>
                        <MudSelectItem Value="@("Corrispondenza")">‚úâÔ∏è Corrispondenza</MudSelectItem>
                        <MudSelectItem Value="@("Legale")">‚öñÔ∏è Legale</MudSelectItem>
                        <MudSelectItem Value="@("HR")">üë• HR</MudSelectItem>
                        <MudSelectItem Value="@("Altro")">üìÅ Altro</MudSelectItem>
                    </MudSelect>
                </MudItem>
                
                <!-- Visibility -->
                <MudItem xs="12" md="6">
                    <MudSelect T="string" Label="Visibilit√†" @bind-Value="visibility" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Private")">üîí Privato</MudSelectItem>
                        <MudSelectItem Value="@("Department")">üë• Dipartimento</MudSelectItem>
                        <MudSelectItem Value="@("Public")">üåê Pubblico</MudSelectItem>
                    </MudSelect>
                </MudItem>
                
                <!-- Tags -->
                <MudItem xs="12">
                    <MudTextField T="string" Label="Tag (separati da virgola)" @bind-Value="tags" 
                                  Variant="Variant.Outlined" 
                                  HelperText="Es: importante, urgente, 2024" />
                </MudItem>
                
                <!-- Notes -->
                <MudItem xs="12">
                    <MudTextField T="string" Label="Note" @bind-Value="notes" 
                                  Variant="Variant.Outlined" 
                                  Lines="3"
                                  HelperText="Aggiungi note o descrizione opzionale" />
                </MudItem>
                
                <!-- AI Processing Options -->
                <MudItem xs="12">
                    <MudText Typo="Typo.h6" Class="mb-2">‚öôÔ∏è Opzioni Elaborazione AI</MudText>
                    <MudStack Row="true" Spacing="3">
                        <MudSwitch @bind-Value="autoExtractText" Color="Color.Primary" Label="Estrazione testo automatica" />
                        <MudSwitch @bind-Value="suggestCategory" Color="Color.Primary" Label="Suggerisci categoria con AI" />
                        <MudSwitch @bind-Value="generateEmbeddings" Color="Color.Primary" Label="Genera embeddings (Gemini)" />
                    </MudStack>
                </MudItem>
                
                <!-- Upload Progress -->
                @if (isUploading)
                {
                    <MudItem xs="12">
                        <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
                        <MudText Typo="Typo.body2" Align="Align.Center" Class="mt-2">
                            @uploadStatus
                        </MudText>
                    </MudItem>
                }
                
                <!-- Action Buttons -->
                <MudItem xs="12" Class="d-flex justify-space-between">
                    <MudButton Variant="Variant.Text" Color="Color.Default" Href="/documents">
                        Annulla
                    </MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                               Disabled="@(selectedFile == null || isUploading)"
                               OnClick="UploadDocument"
                               StartIcon="@Icons.Material.Filled.Upload">
                        Carica Documento
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    private IBrowserFile? selectedFile;
    private string selectedCategory = "Altro";
    private string visibility = "Private";
    private string tags = "";
    private string notes = "";
    private bool autoExtractText = true;
    private bool suggestCategory = true;
    private bool generateEmbeddings = true;
    private bool isUploading = false;
    private string uploadStatus = "";
    
    private void OnFilesChanged(IBrowserFile file)
    {
        selectedFile = file;
    }
    
    private async Task UploadDocument()
    {
        if (selectedFile == null) return;
        
        isUploading = true;
        uploadStatus = "Caricamento in corso...";
        
        try
        {
            // TODO: Implement actual upload logic
            await Task.Delay(2000); // Simulate upload
            
            uploadStatus = "Documento caricato con successo!";
            
            // Reset form
            await Task.Delay(1000);
            selectedFile = null;
            isUploading = false;
            uploadStatus = "";
        }
        catch (Exception ex)
        {
            uploadStatus = $"Errore durante il caricamento: {ex.Message}";
            isUploading = false;
        }
    }
    
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
